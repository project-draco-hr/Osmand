def escape_attrib(s, encoding=None, replace=string.replace):
    s = replace(s, '&', '&amp;')
    s = replace(s, "'", '&apos;')
    s = replace(s, '"', '&quot;')
    s = replace(s, '<', '&lt;')
    s = replace(s, '>', '&gt;')
    if encoding:
        try:
            return encode(s, encoding)
        except UnicodeError:
            return encode_entity(s)
    return s
