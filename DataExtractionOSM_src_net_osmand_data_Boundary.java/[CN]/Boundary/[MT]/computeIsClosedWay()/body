{
  if (getOuterWays().size() > 0) {
    int oldSize=0;
    while (getOuterWays().size() != oldSize) {
      oldSize=getOuterWays().size();
      mergeOuterWays();
    }
    List<Node> nodes=getOuterWays().get(0).getNodes();
    closedWay=getOuterWays().size() == 1 && nodes.get(0).getId() == nodes.get(nodes.size() - 1).getId();
  }
 else {
    closedWay=false;
  }
  return closedWay;
}
