{
  if ((node == null) || (rect == null))   throw new IllegalValueException("RTree.getRPostContains: Node is null");
  List list=new ArrayList();
  Element[] elmts=node.getAllElements();
  int totElements=node.getTotalElements();
  for (int i=0; i < totElements; i++) {
    if (rect.overlaps(elmts[i].getRect())) {
      if (elmts[i].getElementType() == Node.NONLEAF_NODE) {
        list.addAll(getRPostContains(chdNodes.getReadNode(fileHdr.getFile(),fileName,elmts[i].getPtr(),fileHdr),rect));
      }
 else {
        if (elmts[i].getRect().contains(rect))         list.add(elmts[i]);
      }
    }
  }
  return list;
}
