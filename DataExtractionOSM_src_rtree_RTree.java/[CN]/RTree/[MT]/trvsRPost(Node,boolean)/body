{
  if ((node == null))   throw new IllegalValueException("RTree.getRPostOvrlap: Node is null");
  List list=new ArrayList();
  Element[] elmts=node.getAllElements();
  int totElements=node.getTotalElements();
  for (int i=0; i < totElements; i++) {
    if (elmts[i].getElementType() == Node.NONLEAF_NODE) {
      list.addAll(trvsRPost(chdNodes.getReadNode(fileHdr.getFile(),fileName,elmts[i].getPtr(),fileHdr),del));
    }
 else {
      list.add(elmts[i]);
    }
  }
  if (del)   node.deleteNode();
  return list;
}
