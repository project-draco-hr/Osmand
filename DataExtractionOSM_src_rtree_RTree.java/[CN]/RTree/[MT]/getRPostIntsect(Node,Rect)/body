{
  if ((node == null) || (rect == null))   throw new IllegalValueException("RTree.getRPostIntsect: Node is null");
  List list=new ArrayList();
  Element[] elmts=node.getAllElements();
  int totElements=node.getTotalElements();
  for (int i=0; i < totElements; i++) {
    if (!elmts[i].getRect().disjoint(rect)) {
      if (elmts[i].getElementType() == Node.NONLEAF_NODE) {
        list.addAll(getRPostIntsect(chdNodes.getReadNode(fileHdr.getFile(),fileName,elmts[i].getPtr(),fileHdr),rect));
      }
 else {
        list.add(elmts[i]);
      }
    }
  }
  return list;
}
