{
  if (node.getOperator() == Operator.PLUS_ASSIGN && Types.isJavaStringType(Types.getTypeBinding(node.getLeftHandSide())) && Types.isBooleanType(Types.getTypeBinding(node.getRightHandSide()))) {
    addReference(node.getAST().resolveWellKnownType("java.lang.Boolean"));
  }
  return super.visit(node);
}
