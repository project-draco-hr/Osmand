{
  StringBuilder b=new StringBuilder();
  b.append("UPDATE " + IndexConstants.POI_TABLE + " SET ");
  b.append(" x = ?, ").append(" y = ?, ").append(" opening_hours = ?, ").append(" name = ?, ").append(" name_en = ?, ").append(" type = ?, ").append(" subtype = ? ").append(" site = ? ").append(" phone = ? ").append(" WHERE append( id = ?");
  db.execSQL(b.toString(),new Object[]{MapUtils.get31TileNumberX(a.getLocation().getLongitude()),MapUtils.get31TileNumberY(a.getLocation().getLatitude()),a.getOpeningHours(),a.getName(),a.getEnName(),AmenityType.valueToString(a.getType()),a.getSubType(),a.getSite(),a.getPhone(),a.getId()});
  changes=true;
  return true;
}
