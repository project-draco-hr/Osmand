{
  startTime=System.currentTimeMillis();
  Log.e("111","START");
  if (recTimer != null) {
    recTimer.cancel();
  }
  recTimer=new Timer();
  recTimer.schedule(new TimerTask(){
    @Override public void run(){
      handler.post(new Runnable(){
        @Override public void run(){
          if (!restartRecordingIfNeeded()) {
            updateDuration();
          }
        }
      }
);
    }
  }
,0,1000);
}
