{
  stopCounter();
  handler.postDelayed(new Runnable(){
    @Override public void run(){
      CurrentRecording recording=plugin.getCurrentRecording();
      if (recording != null) {
        if (recording.getType() == AVActionType.REC_PHOTO) {
          plugin.shoot();
        }
 else {
          plugin.stopRecording(mapActivity);
        }
      }
    }
  }
,200);
}
