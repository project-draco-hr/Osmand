{
  if (l == null || view == null) {
    return false;
  }
  int newX=MapUtils.getPixelShiftX(view.getZoom(),l.getLongitude(),view.getLongitude(),view.getTileSize()) + view.getWidth() / 2;
  int newY=MapUtils.getPixelShiftY(view.getZoom(),l.getLatitude(),view.getLatitude(),view.getTileSize()) + view.getHeight() / 2;
  int radius=MapUtils.getLengthXFromMeters(view.getZoom(),view.getLatitude(),view.getLongitude(),l.getAccuracy(),view.getTileSize(),view.getWidth());
  if (newX >= 0 && newX <= view.getWidth() && newY >= 0 && newY <= view.getHeight()) {
    return true;
  }
 else {
    if (newX + radius >= 0 && newX - radius <= view.getWidth() && newY + radius >= 0 && newY - radius <= view.getHeight()) {
      return true;
    }
  }
  return false;
}
