{
  checkFavoritePoints();
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    db.execSQL("UPDATE " + FAVOURITE_TABLE_NAME + " SET name = ? WHERE name = ?",new Object[]{newName,p.getName()});
    favoritePoints.remove(p.getName());
    p.setName(newName);
    favoritePoints.put(newName,p);
    return true;
  }
  return false;
}
