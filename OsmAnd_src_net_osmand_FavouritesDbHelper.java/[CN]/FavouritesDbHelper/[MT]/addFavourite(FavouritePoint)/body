{
  checkFavoritePoints();
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    deleteFavourite(p);
    db.execSQL("INSERT INTO " + FAVOURITE_TABLE_NAME + " VALUES (?, ?, ?)",new Object[]{p.getName(),p.getLatitude(),p.getLongitude()});
    favoritePoints.put(p.getName(),p);
    p.setStored(true);
    return true;
  }
  return false;
}
