{
  super.onBoundsChange(bounds);
  if (arrowImage != null) {
    Rect r=getBounds();
    int w=arrowImage.getIntrinsicWidth();
    int h=arrowImage.getIntrinsicHeight();
    int dx=r.width() - w;
    int dy=r.height() - h;
    arrowImage.setBounds(r.left + dx / 2,r.top + dy / 2,r.right - dx / 2,r.bottom - dy / 2);
  }
}
