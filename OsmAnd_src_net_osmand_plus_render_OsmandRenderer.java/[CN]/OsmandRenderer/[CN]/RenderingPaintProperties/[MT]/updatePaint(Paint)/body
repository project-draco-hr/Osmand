{
  p.setStyle(fillArea ? Style.FILL_AND_STROKE : Style.STROKE);
  p.setColor(color);
  p.setShader(shader);
  if (shadowColor == 0) {
    shadowRadius=0;
  }
  p.setShadowLayer(shadowRadius,0,0,shadowColor);
  p.setStrokeWidth(strokeWidth);
  p.setStrokeCap(cap);
  if (!fillArea) {
    p.setPathEffect(pathEffect);
  }
}
