{
  ViewHolder viewHolder;
  if (convertView == null) {
    convertView=LayoutInflater.from(parent.getContext()).inflate(R.layout.two_line_with_images_list_item,parent,false);
    viewHolder=new ViewHolder(convertView);
    convertView.setTag(viewHolder);
  }
 else {
    viewHolder=(ViewHolder)convertView.getTag();
  }
  HasName item=getItem(position);
  if (item instanceof IndexItemCategoryWithSubcat) {
    viewHolder.bindCategory((IndexItemCategoryWithSubcat)item,(DownloadActivity)getContext());
  }
 else   if (item instanceof IndexItem) {
    viewHolder.bindIndexItem((IndexItem)item,(DownloadActivity)getContext());
  }
 else {
    throw new IllegalArgumentException("Item must be of type IndexItem or " + "IndexItemCategory but is of type:" + item.getClass());
  }
  return convertView;
}
