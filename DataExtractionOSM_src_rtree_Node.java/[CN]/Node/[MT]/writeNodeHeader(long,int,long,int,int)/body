{
  if (fileHdr.isWriteThr())   RTree.chdNodes.remove(fileName,nodeIndex);
  if (fileHdr.isWriteThr()) {
    ByteArrayOutputStream bs=new ByteArrayOutputStream(FILE_HDR_SIZE);
    DataOutputStream ds=new DataOutputStream(bs);
    ds.writeInt(totElmt);
    ds.writeLong(prnt);
    ds.writeInt(elmtSz);
    ds.writeInt(elmtTp);
    bs.flush();
    ds.flush();
    seekNode(nodeIdx);
    file.write(bs.toByteArray());
    setDirty(false);
  }
 else   setDirty(true);
  totalElements=totElmt;
  parent=prnt;
  elementSize=elmtSz;
  elementType=elmtTp;
}
