{
  super(context,null,R.attr.actionBarTabStyle);
  mTab=tab;
  TintTypedArray a=TintTypedArray.obtainStyledAttributes(context,null,BG_ATTRS,R.attr.actionBarTabStyle,0);
  if (a.hasValue(0)) {
    setBackgroundDrawable(a.getDrawable(0));
  }
  a.recycle();
  if (forList) {
    setGravity(GravityCompat.START | Gravity.CENTER_VERTICAL);
  }
  update();
}
