{
  final LinearLayoutCompat tabLayout=new LinearLayoutCompat(getContext(),null,R.attr.actionBarTabBarStyle);
  tabLayout.setMeasureWithLargestChildEnabled(true);
  tabLayout.setGravity(Gravity.CENTER);
  tabLayout.setLayoutParams(new LinearLayoutCompat.LayoutParams(LinearLayoutCompat.LayoutParams.WRAP_CONTENT,LinearLayoutCompat.LayoutParams.MATCH_PARENT));
  return tabLayout;
}
