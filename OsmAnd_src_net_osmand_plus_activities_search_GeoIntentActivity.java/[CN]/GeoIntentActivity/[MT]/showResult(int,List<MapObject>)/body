{
  runOnUiThread(new Runnable(){
    @Override public void run(){
      if (places == null) {
        Toast.makeText(GeoIntentActivity.this,getString(warning),Toast.LENGTH_LONG).show();
      }
 else {
        setListAdapter(new MapObjectAdapter(places));
        if (places.size() == 1) {
          onListItemClick(getListView(),getListAdapter().getView(0,null,null),0,getListAdapter().getItemId(0));
        }
      }
    }
  }
);
}
