{
  if (!realCounts) {
    realCounts=true;
    allNodes=statement.executeQuery("select count(distinct n.id) from node n inner join tags t on n.id = t.id and t.type = 0").getInt(1);
    allWays=statement.executeQuery("select count(*) from ways w where w.ord = 0").getInt(1);
    allRelations=statement.executeQuery("select count(distinct r.id) from relations r inner join tags t on t.id = r.id and t.type = 2 and r.ord = 0").getInt(1);
    allBoundaries=statement.executeQuery("select count(distinct t.id) from tags t where t.skeys = \"" + OSMTagKey.BOUNDARY.getValue() + "\"").getInt(1);
  }
}
