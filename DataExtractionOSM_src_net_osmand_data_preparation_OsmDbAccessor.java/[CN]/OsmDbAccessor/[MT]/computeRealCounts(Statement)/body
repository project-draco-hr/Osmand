{
  if (!realCounts) {
    realCounts=true;
    allNodes=statement.executeQuery("select count(distinct n.id) from node n where length(n.tags) > 0").getInt(1);
    allWays=statement.executeQuery("select count(*) from ways w where w.ord = 0").getInt(1);
    allRelations=statement.executeQuery("select count(distinct r.id) from relations r").getInt(1);
    allBoundaries=statement.executeQuery("select count(*) from ways w where w.ord = 0 and w.boundary > 0").getInt(1);
  }
}
