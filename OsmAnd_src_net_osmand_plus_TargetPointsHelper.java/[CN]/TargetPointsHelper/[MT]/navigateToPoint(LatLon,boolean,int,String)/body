{
  if (point != null) {
    if (intermediate < 0) {
      settings.setPointToNavigate(point.getLatitude(),point.getLongitude(),historyName);
    }
 else {
      settings.insertIntermediatePoint(point.getLatitude(),point.getLongitude(),historyName,intermediate);
    }
  }
 else {
    settings.clearPointToNavigate();
    settings.clearIntermediatePoints();
  }
  readFromSettings(settings);
  updateRouteAndReferesh(updateRoute);
}
