{
  if (point != null) {
    if (intermediate < 0) {
      settings.setPointToNavigate(point.getLatitude(),point.getLongitude(),null);
    }
 else {
      settings.insertIntermediatePoint(point.getLatitude(),point.getLongitude(),null,intermediate,false);
    }
  }
 else {
    settings.clearPointToNavigate();
    settings.clearIntermediatePoints();
  }
  readFromSettings(settings);
  updateRouteAndReferesh(map,updateRoute);
}
