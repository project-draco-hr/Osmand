{
  final Location lastLocation=ctx.getLocationProvider().getLastKnownLocation();
  if (lastLocation != null) {
    Collections.sort(this.visibleLocationPoints,new Comparator<LocationPoint>(){
      @Override public int compare(      LocationPoint locationPoint,      LocationPoint locationPoint2){
        double d1=MapUtils.getDistance(lastLocation.getLatitude(),lastLocation.getLongitude(),locationPoint.getLatitude(),locationPoint.getLongitude());
        double d2=MapUtils.getDistance(lastLocation.getLatitude(),lastLocation.getLongitude(),locationPoint2.getLatitude(),locationPoint2.getLongitude());
        return Double.compare(d1,d2);
      }
    }
);
    this.locationPointsModified=System.currentTimeMillis();
  }
}
