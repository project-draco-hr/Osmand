{
  if (pointToNavigate == null) {
    mapActivity.getMapActions().stopNavigationWithoutConfirm();
  }
  if (updateRoute && (routingHelper.isRouteBeingCalculated() || routingHelper.isRouteCalculated() || routingHelper.isFollowingMode()|| routingHelper.isRoutePlanningMode())) {
    updateRoutingHelper();
  }
  updateListeners();
}
