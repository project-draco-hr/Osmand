{
  LatLon location=new LatLon(point.getLatitude(),point.getLongitude());
  final PopupMenu optionsMenu=new PopupMenu(activity,view);
  DirectionsDialogs.createDirectionActionsPopUpMenu(optionsMenu,location,point,point.getPointDescription(),((OsmandApplication)activity.getApplication()).getSettings().getLastKnownMapZoom(),activity,true,false);
  optionsMenu.show();
}
