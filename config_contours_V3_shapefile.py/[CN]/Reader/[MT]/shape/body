def shape(self, i=0):
    'Returns a shape object for a shape in the the geometry\n        record file.'
    shp = self.__getFileObj(self.shp)
    i = self.__restrictIndex(i)
    offset = self.__shapeIndex(i)
    if (not offset):
        shapes = self.shapes()
        return shapes[i]
    shp.seek(offset)
    return self.__shape()
