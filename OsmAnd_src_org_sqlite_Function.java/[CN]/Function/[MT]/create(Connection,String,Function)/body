{
  if (conn == null || !(conn instanceof Conn))   throw new SQLException("connection must be to an SQLite db");
  if (conn.isClosed())   throw new SQLException("connection closed");
  f.conn=(Conn)conn;
  f.db=f.conn.db();
  if (name == null || name.length() > 255)   throw new SQLException("invalid function name: '" + name + "'");
  if (f.db.create_function(name,f) != Codes.SQLITE_OK)   throw new SQLException("error creating function");
}
