{
  final String filter=nameFilter;
  if (filter != null) {
    final boolean en=application.getSettings().USE_ENGLISH_NAMES.get();
    return new ResultMatcher<Amenity>(){
      @Override public boolean publish(      Amenity object){
        if (!OsmAndFormatter.getPoiStringWithoutType(object,en).toLowerCase().contains(filter) || (matcher != null && !matcher.publish(object))) {
          return false;
        }
        return true;
      }
      @Override public boolean isCancelled(){
        return false || (matcher != null && matcher.isCancelled());
      }
    }
;
  }
  return matcher;
}
