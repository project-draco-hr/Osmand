{
  Rect r=null;
  Element[] e=n.getAllElements();
  for (int i=0; i < n.getTotalElements(); i++) {
    Rect re=e[i].getRect();
    if (r == null) {
      try {
        r=new Rect(re.getMinX(),re.getMinY(),re.getMaxX(),re.getMaxY());
      }
 catch (      IllegalValueException ex) {
      }
    }
 else {
      r.expandToInclude(re);
    }
  }
  return r;
}
