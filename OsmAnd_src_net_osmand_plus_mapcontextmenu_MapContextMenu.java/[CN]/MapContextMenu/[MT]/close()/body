{
  if (active) {
    active=false;
    if (object instanceof MapMarker) {
      mapActivity.getMyApplication().getMapMarkersHelper().removeListener(this);
    }
    if (menuController != null) {
      menuController.onClose();
    }
    if (this.object != null) {
      clearSelectedObject(this.object);
    }
    hide();
    mapActivity.refreshMap();
  }
}
