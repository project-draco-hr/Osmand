{
  if (mapPosition != 0) {
    mapActivity.getMapView().setMapPosition(mapPosition);
    mapPosition=0;
  }
  if (getMenuController() != null) {
    getMenuController().onHide();
  }
  WeakReference<MapContextMenuFragment> fragmentRef=findMenuFragment();
  if (fragmentRef != null) {
    fragmentRef.get().dismissMenu();
  }
}
