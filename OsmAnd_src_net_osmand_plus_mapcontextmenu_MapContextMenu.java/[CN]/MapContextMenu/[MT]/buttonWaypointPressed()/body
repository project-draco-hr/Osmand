{
  if (pointDescription.isDestination()) {
    mapActivity.getMapActions().editWaypoints();
  }
 else {
    MenuAction addAsTargetAction=new MenuAction(){
      @Override public void run(){
        mapActivity.getMapActions().addAsTarget(latLon.getLatitude(),latLon.getLongitude(),pointDescription);
      }
    }
;
    if (searchingAddress) {
      addAsTargetAction.dlg=ProgressDialog.show(mapActivity,"",addressNotKnownStr);
      searchDoneAction=addAsTargetAction;
    }
 else {
      addAsTargetAction.run();
    }
  }
  close();
}
