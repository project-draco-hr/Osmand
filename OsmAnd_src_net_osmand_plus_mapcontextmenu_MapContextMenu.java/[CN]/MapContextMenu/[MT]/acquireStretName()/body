{
  RouteDataObject rt=app.getLocationProvider().getLastKnownRouteSegment();
  if (rt != null) {
    foundStreetName=RoutingHelper.formatStreetName(rt.getName(settings.MAP_PREFERRED_LOCALE.get()),rt.getRef(),rt.getDestinationName(settings.MAP_PREFERRED_LOCALE.get()));
  }
 else {
    foundStreetName=null;
  }
}
