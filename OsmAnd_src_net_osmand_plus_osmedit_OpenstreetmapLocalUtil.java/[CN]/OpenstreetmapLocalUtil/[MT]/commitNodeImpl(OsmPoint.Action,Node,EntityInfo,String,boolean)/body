{
  Node newNode=n;
  if (n.getId() == -1) {
    newNode=new Node(n,--nextid);
  }
  OpenstreetmapPoint p=new OpenstreetmapPoint();
  p.setEntity(newNode);
  p.setAction(action);
  p.setComment(comment);
  if (p.getAction() == OsmPoint.Action.DELETE && newNode.getId() < 0) {
    db.deletePOI(p);
  }
 else {
    db.addOpenstreetmap(p);
  }
  return newNode;
}
