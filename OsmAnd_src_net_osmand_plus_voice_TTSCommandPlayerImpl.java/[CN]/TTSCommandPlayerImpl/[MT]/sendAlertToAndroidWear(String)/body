{
  int notificationId=1;
  NotificationCompat.Builder notificationBuilder=new NotificationCompat.Builder(mTtsContext).setSmallIcon(R.drawable.icon).setContentTitle(mTtsContext.getString(R.string.app_name)).setContentText(message).setGroup(WEAR_ALERT);
  NotificationManagerCompat notificationManager=NotificationManagerCompat.from(mTtsContext);
  notificationManager.notify(notificationId,notificationBuilder.build());
}
