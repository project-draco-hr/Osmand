{
  super.onResume();
  downloadQueue.clear();
  if (BaseDownloadActivity.downloadListIndexThread != null) {
    currentProgress=null;
    cancelButton=null;
  }
  updatedDownloadsList(BaseDownloadActivity.downloadListIndexThread.getItemsToUpdate());
  View view=getView();
  if (view != null) {
    view.invalidate();
  }
}
