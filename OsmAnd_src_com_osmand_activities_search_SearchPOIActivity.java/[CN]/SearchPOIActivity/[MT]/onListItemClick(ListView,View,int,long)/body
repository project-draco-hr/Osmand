{
  Amenity amenity=((AmenityAdapter)getListAdapter()).getItem(position);
  OsmandSettings.setMapLocationToShow(this,amenity.getLocation().getLatitude(),amenity.getLocation().getLongitude(),getString(R.string.poi) + " : " + amenity.getSimpleFormat(OsmandSettings.usingEnglishNames(this)));
  Intent newIntent=new Intent(SearchPOIActivity.this,MapActivity.class);
  startActivity(newIntent);
}
