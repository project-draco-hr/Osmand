{
  helper.editPoiFilter(filter);
  if (!editMode) {
    if (filter.isEmpty()) {
      bottomBar.setVisibility(View.GONE);
    }
 else {
      barTitle.setText(getContext().getString(R.string.selected_categories) + ": " + filter.getAcceptedTypesCount());
      bottomBar.setVisibility(View.VISIBLE);
    }
  }
}
