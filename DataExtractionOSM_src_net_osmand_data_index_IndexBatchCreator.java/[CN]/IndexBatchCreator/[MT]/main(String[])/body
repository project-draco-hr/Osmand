{
  IndexBatchCreator creator=new IndexBatchCreator();
  if (args.length < 1 || !new File(args[0]).exists()) {
    throw new IllegalArgumentException("Please specify directory with .osm or .osm.bz2 files as first arg");
  }
  creator.osmDirFiles=new File(args[0]);
  if (args.length < 2 || !new File(args[1]).exists()) {
    throw new IllegalArgumentException("Please specify directory with generated index files as second arg");
  }
  creator.indexDirFiles=new File(args[1]);
  for (int i=2; i < args.length; i++) {
    if ("-downloadOsm".equals(args[i])) {
      creator.downloadFiles=true;
    }
 else     if ("-genIndexes".equals(args[i])) {
      creator.generateIndexes=true;
    }
 else     if ("-upload".equals(args[i])) {
      creator.uploadIndexes=true;
    }
 else     if (args[i].startsWith("-guser=")) {
      creator.user=args[i].substring("-guser=".length());
    }
 else     if (args[i].startsWith("-gpassword=")) {
      creator.password=args[i].substring("-gpassword=".length());
    }
  }
  creator.runBatch();
}
