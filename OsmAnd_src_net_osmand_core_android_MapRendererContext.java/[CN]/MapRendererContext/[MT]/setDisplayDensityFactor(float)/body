{
synchronized (_syncObject) {
    boolean update=(_displayDensityFactor != displayDensityFactor);
    if (!update)     return;
    _displayDensityFactor=displayDensityFactor;
    _referenceTileSize=256.0f * _displayDensityFactor;
    _rasterTileSize=Integer.highestOneBit((int)_referenceTileSize - 1) * 2;
    if (_mapRendererView instanceof AtlasMapRendererView)     ((AtlasMapRendererView)_mapRendererView).setReferenceTileSizeOnScreenInPixels(_referenceTileSize);
    if (_mapPresentationEnvironment != null)     updateMapPresentationEnvironment();
  }
}
