{
  super(activity);
  this.app=app;
  this.horisontalMini=horisontalMini;
  turnDrawable=new TurnDrawable(activity);
  if (horisontalMini) {
    setImageDrawable(turnDrawable,false);
    setTopImageDrawable(null,null);
  }
 else {
    setImageDrawable(null,true);
    setTopImageDrawable(turnDrawable,"");
  }
}
