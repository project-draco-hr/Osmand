{
  int d=getDistance();
  if (distChanged(cachedMeters,d)) {
    cachedMeters=d;
    if (autoHide && cachedMeters <= 20) {
      cachedMeters=0;
      setText(null,null);
    }
 else {
      String ds=OsmAndFormatter.getFormattedDistance(cachedMeters,view.getApplication());
      int ls=ds.lastIndexOf(' ');
      if (ls == -1) {
        setText(ds,null);
      }
 else {
        setText(ds.substring(0,ls),ds.substring(ls + 1));
      }
    }
    return true;
  }
  return false;
}
