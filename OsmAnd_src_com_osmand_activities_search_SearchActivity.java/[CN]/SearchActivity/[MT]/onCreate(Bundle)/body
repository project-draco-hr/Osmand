{
  super.onCreate(savedInstanceState);
  TabHost host=getTabHost();
  host.addTab(host.newTabSpec("Search_POI").setIndicator(getString(R.string.poi)).setContent(new Intent(this,SearchPoiFilterActivity.class)));
  host.addTab(host.newTabSpec("Search_Address").setIndicator(getString(R.string.address)).setContent(new Intent(this,SearchAddressActivity.class)));
  host.addTab(host.newTabSpec("Search_Location").setIndicator(getString(R.string.search_tabs_location)).setContent(new Intent(this,NavigatePointActivity.class)));
}
