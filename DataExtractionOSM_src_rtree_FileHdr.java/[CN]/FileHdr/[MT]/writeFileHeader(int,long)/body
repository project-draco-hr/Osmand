{
  if (writeThr) {
    ByteArrayOutputStream bs=new ByteArrayOutputStream(Node.INTEGER_SIZE + Node.LONG_SIZE);
    DataOutputStream ds=new DataOutputStream(bs);
    ds.writeInt(totNodes);
    ds.writeLong(rootIdx);
    bs.flush();
    ds.flush();
    file.seek(0);
    file.write(bs.toByteArray());
    dirty=false;
  }
  dirty=true;
  totalNodes=totNodes;
  rootIndex=rootIdx;
}
