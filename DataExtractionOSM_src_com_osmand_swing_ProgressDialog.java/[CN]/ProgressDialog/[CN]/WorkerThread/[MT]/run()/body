{
  try {
    if (run != null) {
      run.run();
    }
    isLive=false;
  }
 catch (  RuntimeException e) {
    exception=new InvocationTargetException(e);
  }
 finally {
    SwingUtilities.invokeLater(new Runnable(){
      @Override public void run(){
        setVisible(false);
      }
    }
);
  }
}
