{
  final Object child=getChild(groupPosition,childPosition);
  ItemViewHolder viewHolder;
  if (convertView == null) {
    convertView=LayoutInflater.from(parent.getContext()).inflate(R.layout.two_line_with_images_list_item,parent,false);
    viewHolder=new ItemViewHolder(convertView,getMyApplication().getResourceManager().getDateFormat(),getMyActivity().getIndexActivatedFileNames(),getMyActivity().getIndexFileNames());
    convertView.setTag(viewHolder);
  }
 else {
    viewHolder=(ItemViewHolder)convertView.getTag();
  }
  IndexItem item=(IndexItem)child;
  viewHolder.bindIndexItem(item,getDownloadActivity(),true,false);
  return convertView;
}
