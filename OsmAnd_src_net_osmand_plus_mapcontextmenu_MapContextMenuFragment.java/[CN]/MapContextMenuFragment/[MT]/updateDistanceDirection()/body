{
  TextView distanceText=(TextView)view.findViewById(R.id.distance);
  ImageView direction=(ImageView)view.findViewById(R.id.direction);
  boolean mapLinked=getMapActivity().getMapViewTrackingUtilities().isMapLinkedToLocation() && location != null;
  DashLocationFragment.updateLocationView(!mapLinked,location,heading,direction,distanceText,menu.getLatLon().getLatitude(),menu.getLatLon().getLongitude(),screenOrientation,getMyApplication(),getActivity());
}
