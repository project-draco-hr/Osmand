{
  super.onResume();
  if (!menu.isActive()) {
    dismissMenu();
    return;
  }
  screenOrientation=DashLocationFragment.getScreenOrientation(getActivity());
  if (menu.displayDistanceDirection()) {
    getMapActivity().getMapViewTrackingUtilities().setContextMenu(menu);
  }
  if (centered) {
    centerMarkerLocation();
  }
}
