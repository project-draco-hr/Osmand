{
  final OpenStreetBug bug=getBugFromPoint(point);
  if (bug != null) {
    Builder builder=new AlertDialog.Builder(view.getContext());
    Resources resources=view.getContext().getResources();
    builder.setItems(new String[]{resources.getString(R.string.osb_comment_menu_item),resources.getString(R.string.osb_close_menu_item)},new DialogInterface.OnClickListener(){
      @Override public void onClick(      DialogInterface dialog,      int which){
        if (which == 0) {
          commentBug(view.getContext(),activity.getLayoutInflater(),bug);
        }
 else         if (which == 1) {
          closeBug(view.getContext(),activity.getLayoutInflater(),bug);
        }
      }
    }
);
    builder.create().show();
    return true;
  }
  return false;
}
