{
  if (convertView == null) {
    convertView=LayoutInflater.from(parent.getContext()).inflate(R.layout.two_line_with_images_list_item,parent,false);
    DownloadEntryViewHolder viewHolder=new DownloadEntryViewHolder(convertView,context,deleteDrawable,this);
    convertView.setTag(viewHolder);
  }
  DownloadEntryViewHolder viewHolder=(DownloadEntryViewHolder)convertView.getTag();
  IndexItem item=getItem(position);
  IndexItem cdi=context.getDownloadThread().getCurrentDownloadingItem();
  viewHolder.bindDownloadEntry(getItem(position),cdi == item ? context.getDownloadThread().getCurrentDownloadingItemProgress() : -1,context.getDownloadThread().isDownloading(item));
  return convertView;
}
