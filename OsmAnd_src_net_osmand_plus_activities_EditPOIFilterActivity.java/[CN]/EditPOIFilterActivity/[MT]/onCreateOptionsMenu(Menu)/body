{
  createMenuItem(menu,SAVE_FILTER,R.string.edit_filter_save_as_menu_item,R.drawable.ic_action_gsave_light,R.drawable.ic_action_gsave_dark,MenuItem.SHOW_AS_ACTION_IF_ROOM);
  createMenuItem(menu,FILTER,R.string.filter_current_poiButton,0,0,MenuItem.SHOW_AS_ACTION_WITH_TEXT | MenuItem.SHOW_AS_ACTION_ALWAYS);
  if (!filter.isStandardFilter()) {
    createMenuItem(menu,DELETE_FILTER,R.string.edit_filter_delete_menu_item,R.drawable.ic_action_gdiscard_light,R.drawable.ic_action_gdiscard_dark,MenuItem.SHOW_AS_ACTION_IF_ROOM);
  }
  return super.onCreateOptionsMenu(menu);
}
