{
  createMenuItem(menu,SAVE_FILTER,R.string.edit_filter_save_as_menu_item,R.drawable.a_5_content_save_light,R.drawable.a_5_content_save_dark,MenuItem.SHOW_AS_ACTION_IF_ROOM);
  createMenuItem(menu,FILTER,R.string.filter_current_poiButton,0,0,MenuItem.SHOW_AS_ACTION_WITH_TEXT | MenuItem.SHOW_AS_ACTION_IF_ROOM);
  if (!filter.isStandardFilter()) {
    createMenuItem(menu,DELETE_FILTER,R.string.edit_filter_delete_menu_item,R.drawable.a_5_content_discard_light,R.drawable.a_5_content_discard_dark,MenuItem.SHOW_AS_ACTION_IF_ROOM);
  }
  return super.onCreateOptionsMenu(menu);
}
