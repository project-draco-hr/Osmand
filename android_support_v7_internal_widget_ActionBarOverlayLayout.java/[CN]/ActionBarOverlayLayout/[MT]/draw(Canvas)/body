{
  super.draw(c);
  if (mWindowContentOverlay != null && !mIgnoreWindowContentOverlay) {
    final int top=mActionBarTop.getVisibility() == VISIBLE ? (int)(mActionBarTop.getBottom() + ViewCompat.getTranslationY(mActionBarTop) + 0.5f) : 0;
    mWindowContentOverlay.setBounds(0,top,getWidth(),top + mWindowContentOverlay.getIntrinsicHeight());
    mWindowContentOverlay.draw(c);
  }
}
