{
  final ContextMenuAdapter adapter=new ContextMenuAdapter(activity);
  int i=0;
  for (  String s : allGpxList) {
    String fileName=s;
    if (s.endsWith(".gpx")) {
      s=s.substring(0,s.length() - ".gpx".length());
    }
    s=s.replace('_',' ');
    adapter.item(s).selected(multipleChoice ? 0 : -1).colorIcon(R.drawable.ic_action_polygom_dark).reg();
    if (selectedGpxList != null) {
      updateSelection(selectedGpxList,showCurrentTrack,adapter,i,fileName);
    }
    i++;
  }
  return adapter;
}
