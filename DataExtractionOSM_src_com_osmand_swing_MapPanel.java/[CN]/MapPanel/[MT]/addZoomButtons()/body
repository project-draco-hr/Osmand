{
  JButton zoomIn=new JButton("+");
  JButton zoomOut=new JButton("-");
  zoomIn.addActionListener(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      setZoom(getZoom() + 1);
    }
  }
);
  zoomOut.addActionListener(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      setZoom(getZoom() - 1);
    }
  }
);
  add(zoomIn);
  add(zoomOut);
}
