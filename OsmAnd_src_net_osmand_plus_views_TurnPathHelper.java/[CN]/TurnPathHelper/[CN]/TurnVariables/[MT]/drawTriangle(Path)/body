{
  arcLineTo(pathForTurn,rot - dfAr,cx,cy,radArrowTriangle1);
  arcQuadTo(pathForTurn,rot - dfAr,radArrowTriangle1,rot - dfAr2,radArrowTriangle2,rot,radEndOfArrow,4.5f * scaleTriangle,cx,cy);
