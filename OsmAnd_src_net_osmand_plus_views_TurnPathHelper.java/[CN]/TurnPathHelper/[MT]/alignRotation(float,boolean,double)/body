{
  while (t > 180) {
    t-=360;
  }
  while (t < -180) {
    t+=360;
  }
  float rot=leftSide ? (t + 180) : (t - 180);
  float delta=(float)minDelta;
  if (rot > 360 - delta && rot < 360) {
    rot=360 - delta;
  }
 else   if (rot > 0 && rot < delta) {
    rot=delta;
  }
 else   if (rot < -360 + delta && rot > -360) {
    rot=-360 + delta;
  }
 else   if (rot < 0 && rot > -delta) {
    rot=-delta;
  }
  return rot;
}
