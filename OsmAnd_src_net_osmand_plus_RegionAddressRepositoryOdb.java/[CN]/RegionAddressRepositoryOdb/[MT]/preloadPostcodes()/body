{
  if (postCodes.isEmpty()) {
    Cursor query=db.query(true,"building",new String[]{"postcode"},null,null,null,null,null,null);
    log.debug("Start loading postcodes for ");
    if (query.moveToFirst()) {
      do {
        String postcode=query.getString(0);
        if (postcode != null) {
          postCodes.put(postcode,new PostCode(postcode));
        }
      }
 while (query.moveToNext());
    }
    query.close();
    log.debug("Loaded " + postCodes.size() + " postcodes ");
  }
}
