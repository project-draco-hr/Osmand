{
  if (p.hasObjectType(ObjectType.POI) || p.getLastWord().length() == 0) {
    return -1;
  }
  if (p.hasObjectType(ObjectType.POI_TYPE)) {
    if (p.getRadiusLevel() > 1) {
      return 5;
    }
 else {
      return -1;
    }
  }
  if (p.getLastWord().length() > 3 || p.getRadiusLevel() > 1) {
    return 3;
  }
  return -1;
}
