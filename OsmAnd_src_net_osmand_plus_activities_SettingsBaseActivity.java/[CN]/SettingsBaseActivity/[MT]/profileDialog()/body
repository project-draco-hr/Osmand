{
  Builder b=new AlertDialog.Builder(this);
  final Set<ApplicationMode> selected=new LinkedHashSet<ApplicationMode>();
  View v=NavigateAction.prepareAppModeView(this,selected,false,null,false,new View.OnClickListener(){
    @Override public void onClick(    View v){
      if (selected.size() > 0) {
        setSelectedAppMode(selected.iterator().next());
      }
      if (profileDialog != null && profileDialog.isShowing()) {
        profileDialog.dismiss();
      }
      profileDialog=null;
    }
  }
);
  b.setTitle(R.string.profile_settings);
  b.setView(v);
  profileDialog=b.show();
}
