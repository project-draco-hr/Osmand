{
  super.onResume();
  if (profileSettings) {
    previousAppMode=settings.getApplicationMode();
    int ind=0;
    boolean found=false;
    for (    ApplicationMode a : modes) {
      if (previousAppMode == a) {
        getSupportActionBar().setSelectedNavigationItem(ind);
        found=true;
        break;
      }
      ind++;
    }
    if (!found) {
      getSupportActionBar().setSelectedNavigationItem(0);
    }
  }
 else {
    updateAllSettings();
  }
}
