{
  AlertDialog.Builder builder=new AlertDialog.Builder(getActivity());
  builder.setTitle(getResources().getString(R.string.are_you_sure)).setMessage(getResources().getString(R.string.unsaved_changes_will_be_lost)).setPositiveButton(R.string.shared_string_ok,new DialogInterface.OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      ((DialogFragment)getParentFragment()).dismiss();
    }
  }
).setNegativeButton(R.string.shared_string_cancel,null);
  return builder.create();
}
