{
  RouteRegion reg=road.region;
  int sz=road.types.size();
  for (int i=0; i < sz; i++) {
    RouteTypeRule r=reg.quickGetEncodingRule(road.types.getQuick(i));
    if (r.onewayDirection() != 0) {
      return r.onewayDirection();
    }
 else     if (r.roundabout()) {
      return 1;
    }
  }
  return 0;
}
