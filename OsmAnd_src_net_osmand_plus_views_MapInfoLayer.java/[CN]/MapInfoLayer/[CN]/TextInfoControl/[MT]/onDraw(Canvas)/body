{
  super.onDraw(cv);
  if (isVisible()) {
    int margin=0;
    if (imageDrawable != null) {
      imageDrawable.draw(cv);
      margin=imageDrawable.getBounds().width();
    }
    margin+=leftMargin;
    cv.drawText(text,margin + getLeft(),getBottom() - 3 * scaleCoefficient,textPaint);
    if (subtext != null) {
      cv.drawText(subtext,getLeft() + margin + 2 * scaleCoefficient + textPaint.measureText(text),getBottom() - 3 * scaleCoefficient,subtextPaint);
    }
  }
}
