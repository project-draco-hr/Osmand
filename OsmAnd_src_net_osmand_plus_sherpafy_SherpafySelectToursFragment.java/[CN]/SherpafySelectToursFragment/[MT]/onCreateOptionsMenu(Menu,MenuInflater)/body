{
  com.actionbarsherlock.view.MenuItem menuItem=menu.add(0,ACTION_DOWNLOAD,0,R.string.sherpafy_download_tours).setShowAsActionFlags(MenuItem.SHOW_AS_ACTION_ALWAYS | MenuItem.SHOW_AS_ACTION_WITH_TEXT);
  menuItem.setOnMenuItemClickListener(new OnMenuItemClickListener(){
