{
  int id=settings.getApplicationMode().getIconId();
  if (cachedId != id && settingsAppModeButton.getLeft() > 0) {
    cachedId=id;
    settingsAppModeButton.setBackgroundDrawable(new LayerDrawable(new Drawable[]{mapActivity.getResources().getDrawable(R.drawable.map_btn_plain),drawable}));
  }
  if (drawable != null) {
    drawable.draw(canvas);
  }
}
