{
  final Object item=getItem(position);
  ItemViewHolder viewHolder;
  if (convertView == null) {
    convertView=LayoutInflater.from(parent.getContext()).inflate(R.layout.two_line_with_images_list_item,parent,false);
    viewHolder=new ItemViewHolder(convertView,getMyApplication().getResourceManager().getDateFormat(),getMyActivity().getIndexActivatedFileNames(),getMyActivity().getIndexFileNames());
    convertView.setTag(viewHolder);
  }
 else {
    viewHolder=(ItemViewHolder)convertView.getTag();
  }
  viewHolder.setSrtmDisabled(srtmDisabled);
  viewHolder.setNauticalPluginDisabled(nauticalPluginDisabled);
  viewHolder.setFreeVersion(freeVersion);
  if (item instanceof WorldRegion) {
    viewHolder.bindRegion((WorldRegion)item,getDownloadActivity());
  }
 else   if (item instanceof IndexItem) {
    viewHolder.bindIndexItem((IndexItem)item,getDownloadActivity(),false,true);
  }
 else {
    throw new IllegalArgumentException("Item must be of type WorldRegion or " + "IndexItem but is of type:" + item.getClass());
  }
  return convertView;
}
