{
  if (location != null) {
    loc=new LatLon(location.getLatitude(),location.getLongitude());
  }
 else   if (getMyApplication().getSettings().getLastKnownMapLocation() != null) {
    loc=getMyApplication().getSettings().getLastKnownMapLocation();
  }
 else {
    return;
  }
  this.loc=loc;
  updateArrows();
}
