{
  super.onViewCreated(view,savedInstanceState);
  view.findViewById(R.id.MapView).setVisibility(View.GONE);
  if (getMyApplication().isApplicationInitializing()) {
    getMyApplication().checkApplicationIsBeingInitialized(getActivity(),(TextView)view.findViewById(R.id.ProgressMessage),(ProgressBar)view.findViewById(R.id.ProgressBar),new Runnable(){
      @Override public void run(){
        applicationInitialized(view);
      }
    }
);
  }
 else {
    applicationInitialized(view);
  }
}
