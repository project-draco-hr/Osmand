{
  String additional="";
  if (duration > 0) {
    int d=(int)(duration / 1000);
    String min;
    if (d % 60 < 10) {
      min="0" + (d % 60);
    }
 else {
      min=(d % 60) + "";
    }
    additional+=(d / 60) + ":" + min;
  }
  if (!available) {
    additional+="(" + ctx.getString(R.string.recording_unavailable) + ")";
  }
  return additional;
}
