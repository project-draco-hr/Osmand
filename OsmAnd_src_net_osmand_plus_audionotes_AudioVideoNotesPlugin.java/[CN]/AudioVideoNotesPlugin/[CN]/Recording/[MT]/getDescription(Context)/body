{
  String nm=name == null ? "" : name;
  if (isPhoto()) {
    return ctx.getString(R.string.recording_photo_description,nm,Algorithms.formatDateTime(file.lastModified())).trim();
  }
  updateInternalDescription();
  return ctx.getString(R.string.recording_description,nm,getDuration(ctx),Algorithms.formatDateTime(file.lastModified())).trim();
}
