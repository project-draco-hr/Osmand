{
  String nm=name == null ? "" : name;
  if (isPhoto()) {
    return ctx.getString(R.string.recording_photo_description,nm,AndroidUtils.formatTime(ctx,file.lastModified())).trim();
  }
  updateInternalDescription();
  return ctx.getString(R.string.recording_description,nm,getDuration(ctx),AndroidUtils.formatTime(ctx,file.lastModified())).trim();
}
