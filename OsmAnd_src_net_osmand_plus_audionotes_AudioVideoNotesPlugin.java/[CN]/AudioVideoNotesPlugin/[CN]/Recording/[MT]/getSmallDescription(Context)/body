{
  String nm=name == null ? "" : name;
  if (isPhoto()) {
    return ctx.getString(R.string.recording_photo_description,nm,DateFormat.format("dd.MM.yyyy kk:mm",file.lastModified())).trim();
  }
  return ctx.getString(R.string.recording_description,nm,"",DateFormat.format("dd.MM.yyyy kk:mm",file.lastModified())).trim();
}
