{
  if (duration == -1) {
    duration=0;
    MediaPlayer mediaPlayer=new MediaPlayer();
    try {
      mediaPlayer.setDataSource(file.getAbsolutePath());
      mediaPlayer.prepare();
      duration=mediaPlayer.getDuration();
      available=true;
    }
 catch (    Exception e) {
      log.error("Error reading recording " + file.getAbsolutePath(),e);
      available=false;
    }
  }
}
