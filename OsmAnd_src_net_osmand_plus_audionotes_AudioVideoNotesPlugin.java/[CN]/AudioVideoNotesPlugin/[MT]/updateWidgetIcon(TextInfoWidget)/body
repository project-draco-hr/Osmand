{
  recordPlaceControl.setIcons(R.drawable.widget_icon_av_inactive_day,R.drawable.widget_icon_av_inactive_night);
  if (AV_DEFAULT_ACTION.get() == AV_DEFAULT_ACTION_VIDEO) {
    recordPlaceControl.setIcons(R.drawable.widget_icon_video,R.drawable.widget_icon_video);
  }
 else   if (AV_DEFAULT_ACTION.get() == AV_DEFAULT_ACTION_TAKEPICTURE) {
    recordPlaceControl.setIcons(R.drawable.widget_icon_video,R.drawable.widget_icon_video);
  }
 else   if (AV_DEFAULT_ACTION.get() == AV_DEFAULT_ACTION_AUDIO) {
    recordPlaceControl.setIcons(R.drawable.widget_icon_audio,R.drawable.widget_icon_audio);
  }
}
