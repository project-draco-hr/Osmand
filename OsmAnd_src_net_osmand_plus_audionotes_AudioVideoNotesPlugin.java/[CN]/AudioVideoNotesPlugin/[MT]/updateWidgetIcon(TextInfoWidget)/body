{
  recordPlaceControl.setIcons(R.drawable.widget_icon_av_inactive_day,R.drawable.widget_icon_av_inactive_night);
  if (AV_DEFAULT_ACTION.get() == AV_DEFAULT_ACTION_VIDEO) {
    recordPlaceControl.setIcons(R.drawable.widget_av_video_day,R.drawable.widget_av_video_night);
  }
 else   if (AV_DEFAULT_ACTION.get() == AV_DEFAULT_ACTION_TAKEPICTURE) {
    recordPlaceControl.setIcons(R.drawable.widget_av_photo_day,R.drawable.widget_av_photo_night);
  }
 else   if (AV_DEFAULT_ACTION.get() == AV_DEFAULT_ACTION_AUDIO) {
    recordPlaceControl.setIcons(R.drawable.widget_av_audio_day,R.drawable.widget_av_audio_night);
  }
}
