{
  OnContextMenuClick listener=new OnContextMenuClick(){
    @Override public boolean onContextMenuClick(    int itemId,    int pos,    boolean isChecked){
      if (itemId == R.string.layer_recordings) {
        SHOW_RECORDINGS.set(!SHOW_RECORDINGS.get());
        updateLayers(mapView,mapActivity);
      }
      return true;
    }
  }
;
  adapter.item(R.string.layer_recordings).selected(SHOW_RECORDINGS.get() ? 1 : 0).icons(R.drawable.ic_action_audio_dark,R.drawable.ic_action_audio_light).listen(listener).position(6).reg();
}
