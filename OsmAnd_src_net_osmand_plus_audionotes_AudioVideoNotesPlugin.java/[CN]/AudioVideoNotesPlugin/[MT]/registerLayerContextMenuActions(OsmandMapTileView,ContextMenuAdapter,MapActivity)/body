{
  OnContextMenuClick listener=new OnContextMenuClick(){
    @Override public boolean onContextMenuClick(    ArrayAdapter<?> adapter,    int itemId,    int pos,    boolean isChecked){
      if (itemId == R.string.layer_recordings) {
        SHOW_RECORDINGS.set(!SHOW_RECORDINGS.get());
        updateLayers(mapView,mapActivity);
      }
      return true;
    }
  }
;
  adapter.item(R.string.layer_recordings).selected(SHOW_RECORDINGS.get() ? 1 : 0).colorIcon(R.drawable.ic_action_micro_dark).listen(listener).position(12).reg();
}
