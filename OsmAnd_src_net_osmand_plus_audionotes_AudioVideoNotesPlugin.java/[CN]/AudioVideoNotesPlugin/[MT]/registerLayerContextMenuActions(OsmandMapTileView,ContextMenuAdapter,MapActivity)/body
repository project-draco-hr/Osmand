{
  ItemClickListener listener=new ContextMenuAdapter.ItemClickListener(){
    @Override public boolean onContextMenuClick(    ArrayAdapter<ContextMenuItem> adapter,    int itemId,    int pos,    boolean isChecked){
      if (itemId == R.string.layer_recordings) {
        SHOW_RECORDINGS.set(!SHOW_RECORDINGS.get());
        updateLayers(mapView,mapActivity);
      }
      return true;
    }
  }
;
  adapter.addItem(new ContextMenuItem.ItemBuilder().setTitleId(R.string.layer_recordings,app).setSelected(SHOW_RECORDINGS.get()).setIcon(R.drawable.ic_action_micro_dark).setPosition(12).setListener(listener).createItem());
}
