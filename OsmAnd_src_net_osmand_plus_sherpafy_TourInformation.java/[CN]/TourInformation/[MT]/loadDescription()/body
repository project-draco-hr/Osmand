{
  File fl=new File(folder,"description.txt");
  StringBuilder text=new StringBuilder();
  if (fl.exists()) {
    try {
      BufferedReader in=new BufferedReader(new FileReader(fl),256);
      String s;
      boolean f=true;
      while ((s=in.readLine()) != null) {
        if (!f) {
          text.append("\n");
        }
 else {
          f=false;
        }
        text.append(s);
      }
      in.close();
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  return text.toString();
}
