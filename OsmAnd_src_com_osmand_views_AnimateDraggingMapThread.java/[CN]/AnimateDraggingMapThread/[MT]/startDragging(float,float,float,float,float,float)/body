{
  stopAnimatingSync();
  vx=velocityX;
  vy=velocityY;
  dirX=(byte)(endX > startX ? 1 : -1);
  dirY=(byte)(endY > startY ? 1 : -1);
  curZ=0;
  endZ=0;
  timeZ=0;
  ax=vx * a;
  ay=vy * a;
  time=System.currentTimeMillis();
  stopped=false;
  Thread thread=new Thread(this,"Animatable dragging");
  thread.start();
}
