{
  if (mDataArray == null)   return 0;
  if (Index < 0) {
    return ((PieItem)mDataArray.get(0)).Color;
  }
 else   if (Index >= mDataArray.size()) {
    return ((PieItem)mDataArray.get(mDataArray.size() - 1)).Color;
  }
 else {
    return ((PieItem)mDataArray.get(mDataArray.size() - 1)).Color;
  }
}
