{
  String result=null;
  if (currentLocation != null) {
    String provider=currentLocation.getProvider();
    if (currentLocation.hasAccuracy())     result=getString(R.string.accuracy) + " " + OsmAndFormatter.getFormattedDistance(currentLocation.getAccuracy(),context);
    if (result != null)     result+=" (" + provider + ")";
 else     result=provider;
  }
  return result;
}
