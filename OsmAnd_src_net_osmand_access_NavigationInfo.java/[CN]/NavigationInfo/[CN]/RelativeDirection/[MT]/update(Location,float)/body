{
  boolean result=false;
  final RelativeDirectionStyle newStyle=settings.DIRECTION_STYLE.get();
  if (style != newStyle) {
    style=newStyle;
    result=true;
  }
  final int newValue=directionTo(point,heading);
  if (value != newValue) {
    value=newValue;
    result=true;
  }
  return result;
}
