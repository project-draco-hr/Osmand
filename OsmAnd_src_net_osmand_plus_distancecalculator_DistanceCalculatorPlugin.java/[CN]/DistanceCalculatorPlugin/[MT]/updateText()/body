{
  if (distanceControl != null) {
    String ds=distance;
    if (ds == null) {
      distanceControl.setText(app.getString(R.string.dist_control_start),"");
    }
 else {
      int ls=ds.lastIndexOf(' ');
      if (ls == -1) {
        distanceControl.setText(ds,null);
      }
 else {
        distanceControl.setText(ds.substring(0,ls),ds.substring(ls + 1));
      }
    }
  }
}
