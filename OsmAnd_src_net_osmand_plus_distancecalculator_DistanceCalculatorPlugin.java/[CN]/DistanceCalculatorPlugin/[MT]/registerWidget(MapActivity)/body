{
  MapInfoLayer mapInfoLayer=activity.getMapLayers().getMapInfoLayer();
  if (mapInfoLayer != null) {
    distanceControl=createDistanceControl(activity,mapInfoLayer.getPaintText(),mapInfoLayer.getPaintSubText());
    mapInfoLayer.getMapInfoControls().registerSideWidget(distanceControl,R.drawable.widget_distance,R.string.map_widget_distancemeasurement,"distance.measurement",false,EnumSet.of(ApplicationMode.DEFAULT,ApplicationMode.PEDESTRIAN),EnumSet.noneOf(ApplicationMode.class),21);
    mapInfoLayer.recreateControls();
    updateText();
  }
}
