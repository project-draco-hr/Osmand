{
  if (distanceMeasurementMode == 1 && measurementPoints.size() > 0) {
    LinkedList<WptPt> lt=measurementPoints.get(measurementPoints.size() - 1);
    if (lt.size() > 0) {
      lt.removeLast();
    }
    calculateDistance();
    view.refreshMap();
    updateText();
    return true;
  }
  return false;
}
