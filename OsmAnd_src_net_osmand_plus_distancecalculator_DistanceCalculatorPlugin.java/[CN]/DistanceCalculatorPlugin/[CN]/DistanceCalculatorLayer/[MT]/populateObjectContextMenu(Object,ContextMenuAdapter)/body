{
  if (o instanceof WptPt) {
    final WptPt p=(WptPt)o;
    OnContextMenuClick listener=new OnContextMenuClick(){
      @Override public void onContextMenuClick(      int itemId,      int pos,      boolean isChecked,      DialogInterface dialog){
        if (itemId == R.string.delete_point) {
          for (int i=0; i < measurementPoints.size(); i++) {
            Iterator<WptPt> it=measurementPoints.get(i).iterator();
            while (it.hasNext()) {
              if (it.next() == p) {
                it.remove();
              }
            }
          }
          calculateDistance();
        }
      }
    }
;
    adapter.item(R.string.delete_point).icons(R.drawable.ic_action_delete_dark,R.drawable.ic_action_delete_light).listen(listener).reg();
  }
}
