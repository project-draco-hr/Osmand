{
  IconsCache iconsCache=getMyApplication().getIconsCache();
  final PopupMenu optionsMenu=new PopupMenu(getActivity(),v);
  MenuItem item=optionsMenu.getMenu().add(R.string.poi_filter_custom_filter).setIcon(iconsCache.getContentIcon(R.drawable.ic_action_filter_dark));
  item.setOnMenuItemClickListener(new MenuItem.OnMenuItemClickListener(){
    @Override public boolean onMenuItemClick(    MenuItem item){
      PoiLegacyFilter filter=getApp().getPoiFilters().getFilterById(PoiLegacyFilter.CUSTOM_FILTER_ID);
      if (filter != null) {
        filter.clearFilter();
        showEditActivity(filter);
      }
      return true;
    }
  }
);
  optionsMenu.show();
}
