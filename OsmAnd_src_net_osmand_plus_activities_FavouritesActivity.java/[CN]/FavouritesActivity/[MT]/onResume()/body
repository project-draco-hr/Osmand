{
  super.onResume();
  final LatLon mapLocation=OsmandSettings.getOsmandSettings(this).getLastKnownMapLocation();
  favouritesAdapter.synchronizeGroups();
  if (mapLocation != null) {
    favouritesAdapter.sort(new Comparator<FavouritePoint>(){
      @Override public int compare(      FavouritePoint object1,      FavouritePoint object2){
        if (object1.getName == object2.getName) {
          return 0;
        }
 else         if (object1.getName > object1.getName) {
          return 1;
        }
        return -1;
      }
    }
);
  }
}
