{
  if (nightMode == night && !f) {
    return;
  }
  f=false;
  nightMode=night;
  if (bgDark != 0 && bgLight != 0) {
    iv.setBackgroundDrawable(ctx.getResources().getDrawable(night ? bgDark : bgLight));
  }
  iv.setImageDrawable(ctx.getIconsCache().getIcon(resId,nightMode ? resDark : resLight));
}
