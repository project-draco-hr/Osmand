{
  String zoomText=view.getZoom() + "";
  float length=zoomTextPaint.measureText(zoomText);
  if (zoomShadow.getBounds().width() == 0) {
    zoomShadow.setBounds(zoomInButton.getLeft() - 2,zoomInButton.getTop() - (int)(18 * dm.density),zoomInButton.getRight(),zoomInButton.getBottom());
  }
  zoomShadow.draw(canvas);
  canvas.drawText(zoomText,zoomInButton.getLeft() + (zoomInButton.getWidth() - length - 2) / 2,zoomInButton.getTop() + 4 * dm.density,zoomTextPaint);
}
