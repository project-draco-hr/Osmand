{
  Message msg=Message.obtain(showUIHandler,new Runnable(){
    @Override public void run(){
      showZoomLevelButton=false;
      showZoomLevel=false;
      view.refreshMap();
    }
  }
);
  msg.what=SHOW_ZOOM_BUTTON_MSG_ID;
  showUIHandler.sendMessageDelayed(msg,SHOW_ZOOM_LEVEL_BUTTON_DELAY);
}
