{
  FrameLayout parent=(FrameLayout)mapActivity.getMapView().getParent();
  parent.requestLayout();
  for (  MapControls mc : allControls) {
    if (mc.isBottom()) {
      mc.setExtraVerticalMargin(height);
      if (mc.isVisible()) {
        mc.forceHide(parent);
        mc.show(parent);
      }
    }
  }
}
