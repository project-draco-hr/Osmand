{
  Cursor query=db.rawQuery("SELECT " + POINT_COL_LAT + ","+ POINT_COL_LON+ ","+ POINT_COL_DATE+ ","+ POINT_COL_DESCRIPTION+ " FROM "+ POINT_NAME+ " ORDER BY "+ POINT_COL_DATE+ " ASC",null);
  if (query.moveToFirst()) {
    do {
      WptPt pt=new WptPt();
      pt.lat=query.getDouble(0);
      pt.lon=query.getDouble(1);
      long time=query.getLong(2);
      pt.time=time;
      pt.name=query.getString(3);
      if (pt.name != null && pt.name.length() > 4 && pt.name.charAt(pt.name.length() - 4) == '.') {
        pt.link=pt.name;
      }
      String date=DateFormat.format("yyyy-MM-dd",time).toString();
      GPXFile gpx;
      if (dataTracks.containsKey(date)) {
        gpx=dataTracks.get(date);
      }
 else {
        gpx=new GPXFile();
        dataTracks.put(date,gpx);
      }
      gpx.points.add(pt);
    }
 while (query.moveToNext());
  }
  query.close();
}
