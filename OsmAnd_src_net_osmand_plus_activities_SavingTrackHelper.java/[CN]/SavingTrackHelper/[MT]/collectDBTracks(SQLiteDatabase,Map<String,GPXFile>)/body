{
  Cursor query=db.rawQuery("SELECT " + TRACK_COL_LAT + ","+ TRACK_COL_LON+ ","+ TRACK_COL_ALTITUDE+ ","+ TRACK_COL_SPEED+ ","+ TRACK_COL_DATE+ " FROM "+ TRACK_NAME+ " ORDER BY "+ TRACK_COL_DATE+ " ASC",null);
  long previousTime=0;
  TrkSegment segment=null;
  Track track=null;
  if (query.moveToFirst()) {
    do {
      TrkPt pt=new TrkPt();
      pt.lat=query.getDouble(0);
      pt.lon=query.getDouble(1);
      pt.ele=query.getDouble(2);
      pt.speed=query.getDouble(3);
      long time=query.getLong(4);
      pt.time=time;
      if (track != null && Math.abs(time - previousTime) < 60000) {
        segment.points.add(pt);
      }
 else       if (track != null && Math.abs(time - previousTime) < 2 * 60000) {
        segment=new TrkSegment();
        segment.points.add(pt);
        track.segments.add(segment);
      }
 else {
        track=new Track();
        segment=new TrkSegment();
        track.segments.add(segment);
        segment.points.add(pt);
        String date=DateFormat.format("yyyy-MM-dd",time).toString();
        if (dataTracks.containsKey(date)) {
          GPXFile gpx=dataTracks.get(date);
          gpx.tracks.add(track);
        }
 else {
          GPXFile file=new GPXFile();
          file.tracks.add(track);
          dataTracks.put(date,file);
        }
      }
      previousTime=time;
    }
 while (query.moveToNext());
  }
  query.close();
}
