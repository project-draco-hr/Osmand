{
  if (isEmpty()) {
    left=xleft;
    right=xright;
    top=ytop;
    bottom=ybottom;
  }
  left=Math.min(xleft,left);
  right=Math.max(xright,right);
  bottom=Math.min(ybottom,bottom);
  top=Math.max(ytop,top);
  boxTiles.add(xleft);
  boxTiles.add(ytop);
  boxTiles.add(xright);
  boxTiles.add(ybottom);
  allTiles=null;
}
