{
  if (e.isPopupTrigger()) {
    int x=e.getX();
    int y=e.getY();
    TreePath path=treePlaces.getPathForLocation(x,y);
    if (path != null) {
      if (!treePlaces.getSelectionModel().isPathSelected(path)) {
        treePlaces.setSelectionPath(path);
      }
      popupMenu.show(treePlaces,x,y);
    }
  }
}
