{
  final AmenityIndexRepositoryOdb repo=getMyApplication().getResourceManager().getUpdatablePoiDb();
  Long c=i.getId();
  if (c != null) {
    List<OsmPoint> list=data.get(c);
    list.remove(i);
    if (list.isEmpty()) {
      data.remove(c);
      category.remove(c);
    }
    if (i.getGroup() == OsmPoint.Group.POI && i.getAction() == Action.CREATE) {
      repo.deleteAmenities(i.getId() << 1);
      repo.clearCache();
    }
  }
  listAdapter.notifyDataSetChanged();
}
