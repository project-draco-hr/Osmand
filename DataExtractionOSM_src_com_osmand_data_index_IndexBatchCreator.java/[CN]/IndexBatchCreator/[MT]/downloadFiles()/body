{
  for (  String country : countriesToDownload1) {
    String url=SITE_TO_DOWNLOAD1 + country + ".osm.bz2";
    log.info("Downloading country " + country + " from "+ url);
    downloadFile(url,new File(osmDirFiles,country + ".osm.bz2"));
  }
  for (  String country : usStates) {
    country=country.toLowerCase();
    String url=SITE_TO_DOWNLOAD2 + "north_america/united_states/" + country+ "/"+ country+ ".osm.bz2";
    log.info("Downloading country " + country + " from "+ url);
    downloadFile(url,new File(osmDirFiles,"US_" + country + ".osm.bz2"));
  }
  for (  String country : canadaStates) {
    country=country.toLowerCase();
    String url=SITE_TO_DOWNLOAD2 + "north_america/canada/" + country+ "/"+ country+ ".osm.bz2";
    log.info("Downloading country " + country + " from "+ url);
    downloadFile(url,new File(osmDirFiles,"Canada_" + country + ".osm.bz2"));
  }
  System.out.println("DOWNLOADING FILES FINISHED");
}
