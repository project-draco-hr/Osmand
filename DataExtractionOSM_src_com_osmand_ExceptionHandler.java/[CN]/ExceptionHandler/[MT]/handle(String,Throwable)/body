{
  if (e != null) {
    log.error(msg,e);
  }
 else {
    log.error(msg);
  }
  if (e != null) {
    e.printStackTrace();
  }
  if (OsmExtractionUI.MAIN_APP != null && OsmExtractionUI.MAIN_APP.getFrame() != null) {
    String text;
    String title;
    if (e != null) {
      text=e + " ";
      title=msg;
    }
 else {
      title="Error occured";
      text=msg;
    }
    JOptionPane.showMessageDialog(OsmExtractionUI.MAIN_APP.getFrame(),text,title,JOptionPane.ERROR_MESSAGE);
  }
}
