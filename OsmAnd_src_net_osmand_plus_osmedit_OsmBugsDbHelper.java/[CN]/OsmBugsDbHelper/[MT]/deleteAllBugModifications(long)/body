{
  checkOsmbugsPoints();
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    db.execSQL("DELETE FROM " + OSMBUGS_TABLE_NAME + " WHERE "+ OSMBUGS_COL_ID+ " = ?",new Object[]{id});
    for (Iterator<OsmbugsPoint> it=cachedOsmbugsPoints.iterator(); it.hasNext(); ) {
      if (it.next().getId() == id) {
        it.remove();
      }
    }
    ;
    return true;
  }
  return false;
}
