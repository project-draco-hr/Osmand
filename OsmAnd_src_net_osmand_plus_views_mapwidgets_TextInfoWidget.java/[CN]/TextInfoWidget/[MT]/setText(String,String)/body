{
  this.text=text;
  this.subtext=subtext;
  if (text != null) {
    if (subtext != null)     setContentDescription(text + " " + subtext);
 else     setContentDescription(text);
  }
 else {
    setContentDescription(subtext);
  }
  updateVisibility(text != null);
  requestLayout();
  invalidate();
}
