{
  MapInfoLayer layer=activity.getMapLayers().getMapInfoLayer();
  monitoringControl=createMonitoringControl(activity,layer.getPaintText(),layer.getPaintSubText());
  layer.getMapInfoControls().registerSideWidget(monitoringControl,R.drawable.widget_tracking,R.string.map_widget_monitoring,"monitoring",false,EnumSet.of(ApplicationMode.BICYCLE,ApplicationMode.PEDESTRIAN),EnumSet.noneOf(ApplicationMode.class),18);
  layer.recreateControls();
}
