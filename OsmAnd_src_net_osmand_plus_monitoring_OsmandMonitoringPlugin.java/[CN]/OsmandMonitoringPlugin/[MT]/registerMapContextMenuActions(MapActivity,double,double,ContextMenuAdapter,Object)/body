{
  OnContextMenuClick listener=new OnContextMenuClick(){
    @Override public void onContextMenuClick(    int resId,    int pos,    boolean isChecked,    DialogInterface dialog){
      if (resId == R.string.context_menu_item_add_waypoint) {
        mapActivity.getMapActions().addWaypoint(latitude,longitude);
      }
    }
  }
;
  adapter.item(R.string.context_menu_item_add_waypoint).icons(R.drawable.ic_action_gnew_label_dark,R.drawable.ic_action_gnew_label_light).listen(listener).reg();
}
