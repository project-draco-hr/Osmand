{
  if (isActive()) {
    if (monitoringControl == null) {
      registerLayers(activity);
    }
  }
 else {
    if (monitoringControl != null) {
      MapInfoLayer layer=activity.getMapLayers().getMapInfoLayer();
      layer.removeSideWidget(monitoringControl);
      layer.recreateControls();
      monitoringControl=null;
    }
  }
}
