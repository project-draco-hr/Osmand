{
  super.onCreate(icicle);
  ListView lv=new ListView(this);
  lv.setId(android.R.id.list);
  TextView header=new TextView(this);
  RoutingHelper helper=RoutingHelper.getInstance(this);
  Calendar c=Calendar.getInstance();
  int time=helper.getLeftTime() * 1000 - c.getTimeZone().getOffset(0);
  int dist=helper.getLeftDistance();
  header.setText(MessageFormat.format(getString(R.string.route_general_information),MapUtils.getFormattedDistance(dist),DateFormat.format("kk:mm",time)));
  lv.addHeaderView(header);
  setContentView(lv);
  setListAdapter(new RouteInfoAdapter(RoutingHelper.getInstance(this).getRouteDirections()));
}
