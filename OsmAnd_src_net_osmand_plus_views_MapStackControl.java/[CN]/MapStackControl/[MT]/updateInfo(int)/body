{
  for (  MapInfoControl v : stackViews) {
    v.updateInfo();
    if (v.getShadowColor() != shadowColor) {
      v.setShadowColor(shadowColor);
    }
  }
  for (  MapInfoControl v : collapsedViews) {
    v.updateInfo();
    if (v.getShadowColor() != shadowColor) {
      v.setShadowColor(shadowColor);
    }
  }
}
