{
  if (meters >= 100000) {
    return meters / 1000 + " km";
  }
 else   if (meters >= 10000) {
    return MessageFormat.format("{0, number, #.#} km",((float)meters) / 1000);
  }
 else   if (meters > 1500) {
    return MessageFormat.format("{0, number, #.##} km",((float)meters) / 1000);
  }
 else {
    return meters + " m";
  }
}
