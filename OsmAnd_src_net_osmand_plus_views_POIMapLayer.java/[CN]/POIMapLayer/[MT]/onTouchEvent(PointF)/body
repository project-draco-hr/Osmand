{
  Amenity n=getAmenityFromPoint(point);
  if (n != null) {
    String format=OsmAndFormatter.getPoiSimpleFormat(n,view.getContext(),OsmandSettings.usingEnglishNames(view.getSettings()));
    if (n.getOpeningHours() != null) {
      format+="\n" + view.getContext().getString(R.string.opening_hours) + " : "+ n.getOpeningHours();
    }
    if (n.getPhone() != null) {
      format+="\n" + view.getContext().getString(R.string.phone) + " : "+ n.getPhone();
    }
    if (n.getSite() != null) {
      format+="\n" + view.getContext().getString(R.string.website) + " : "+ n.getSite();
    }
    Toast.makeText(view.getContext(),format,Toast.LENGTH_SHORT).show();
    return true;
  }
  return false;
}
