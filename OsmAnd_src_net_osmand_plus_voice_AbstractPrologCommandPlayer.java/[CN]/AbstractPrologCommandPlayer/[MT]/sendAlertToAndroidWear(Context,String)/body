{
  int notificationId=1;
  NotificationCompat.Builder notificationBuilder=new NotificationCompat.Builder(ctx).setSmallIcon(R.drawable.icon).setContentTitle(ctx.getString(R.string.app_name)).setContentText(message).setGroup(WEAR_ALERT);
  NotificationManagerCompat notificationManager=NotificationManagerCompat.from(ctx);
  notificationManager.notify(notificationId,notificationBuilder.build());
}
