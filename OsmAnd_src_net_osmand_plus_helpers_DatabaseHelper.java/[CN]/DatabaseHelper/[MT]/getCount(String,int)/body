{
  SQLiteAPI.SQLiteConnection db=openConnection(true);
  long count=0;
  if (db != null) {
    try {
      SQLiteAPI.SQLiteCursor query;
switch (type) {
case DOWNLOAD_ENTRY:
        query=db.rawQuery("SELECT " + HISTORY_COL_COUNT + " FROM "+ DOWNLOADS_TABLE_NAME+ " WHERE "+ HISTORY_COL_NAME+ "='"+ name+ "'",null);
      break;
case FAVORITES_ENTRY:
    query=db.rawQuery("SELECT " + HISTORY_COL_COUNT + " FROM "+ FAVORITES_TABLE_NAME+ " WHERE "+ HISTORY_COL_NAME+ "='"+ name+ "'",null);
  break;
default :
query=null;
break;
}
if (query != null) {
if (query.moveToFirst()) {
count=query.getInt(0);
}
query.close();
}
}
  finally {
db.close();
}
}
return count;
}
