{
  List<Node> border=getBorder();
  for (int i=1; i < border.size(); i++) {
    LatLon c=border.get(i - 1).getLatLon();
    LatLon d=border.get(i).getLatLon();
    if (MapAlgorithms.linesIntersect(a.getLatitude(),a.getLongitude(),b.getLatitude(),b.getLongitude(),c.getLatitude(),c.getLongitude(),d.getLatitude(),d.getLongitude())) {
      return i;
    }
  }
  return 0;
}
