{
  Path path=null;
  for (  Node node : way.getNodes()) {
    int x=view.getMapXForPoint(node.getLongitude());
    int y=view.getMapYForPoint(node.getLatitude());
    if (path == null) {
      path=new Path();
      path.moveTo(x,y);
    }
 else {
      path.lineTo(x,y);
    }
  }
  if (path != null) {
    canvas.drawPath(path,paint);
  }
}
