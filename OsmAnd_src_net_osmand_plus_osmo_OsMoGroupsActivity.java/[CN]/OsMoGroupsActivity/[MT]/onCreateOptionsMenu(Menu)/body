{
  menu.clear();
  Menu oldMenu=menu;
  boolean portrait=ScreenOrientationHelper.isOrientationPortrait(this);
  if (portrait) {
    menu=getClearToolbar(true).getMenu();
  }
 else {
    getClearToolbar(false);
  }
  createMenuItem(menu,CONNECT_TO,R.string.osmo_connect,0,0,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,SHARE_SESSION,R.string.osmo_share_session,R.drawable.ic_action_gshare_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,CREATE_GROUP,R.string.osmo_create_group,R.drawable.ic_group_add,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(oldMenu,SETTINGS_ID,R.string.shared_string_settings,R.drawable.ic_action_settings,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  return super.onCreateOptionsMenu(menu);
}
