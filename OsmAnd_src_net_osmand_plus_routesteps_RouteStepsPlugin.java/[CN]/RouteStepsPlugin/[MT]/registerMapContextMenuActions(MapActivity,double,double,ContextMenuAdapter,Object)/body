{
  ContextMenuAdapter.OnContextMenuClick addListener=new ContextMenuAdapter.OnContextMenuClick(){
    @Override public void onContextMenuClick(    int resId,    int pos,    boolean isChecked,    DialogInterface dialog){
      if (resId == R.string.context_menu_item_show_route_points) {
        showStepsDialog(mapActivity);
      }
    }
  }
;
  adapter.item(R.string.context_menu_item_show_route_points).icons(R.drawable.ic_action_parking_dark,R.drawable.ic_action_parking_light).listen(addListener).reg();
}
