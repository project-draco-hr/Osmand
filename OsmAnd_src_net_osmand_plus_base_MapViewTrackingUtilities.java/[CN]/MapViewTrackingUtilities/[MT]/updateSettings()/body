{
  if (mapView != null) {
    if (settings.ROTATE_MAP.get() != OsmandSettings.ROTATE_MAP_COMPASS || routePlanningMode) {
      mapView.setRotate(0);
    }
    mapView.setMapPosition(settings.ROTATE_MAP.get() == OsmandSettings.ROTATE_MAP_BEARING && !routePlanningMode ? OsmandSettings.BOTTOM_CONSTANT : OsmandSettings.CENTER_CONSTANT);
  }
  registerUnregisterSensor(app.getLocationProvider().getLastKnownLocation());
}
