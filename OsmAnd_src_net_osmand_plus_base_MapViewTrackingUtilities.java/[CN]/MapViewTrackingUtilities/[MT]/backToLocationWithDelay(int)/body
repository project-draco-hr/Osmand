{
  app.runMessageInUIThreadAndCancelPrevious(AUTO_FOLLOW_MSG_ID,new Runnable(){
    @Override public void run(){
      if (mapView != null && !isMapLinkedToLocation()) {
        app.showToastMessage(R.string.auto_follow_location_enabled);
        backToLocationImpl();
      }
    }
  }
,delay * 1000);
}
