{
  int currentMapRotation=settings.ROTATE_MAP.get();
  boolean registerCompassListener=(showViewAngle && location != null) || (currentMapRotation == OsmandSettings.ROTATE_MAP_COMPASS && !routePlanningMode);
  if (sensorRegistered != registerCompassListener) {
    app.getLocationProvider().registerOrUnregisterCompassListener(registerCompassListener);
  }
}
