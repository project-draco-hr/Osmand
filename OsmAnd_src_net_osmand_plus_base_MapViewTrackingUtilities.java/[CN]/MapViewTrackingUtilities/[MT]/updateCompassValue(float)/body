{
  if (mapView != null) {
    if (settings.ROTATE_MAP.get() == OsmandSettings.ROTATE_MAP_COMPASS && !routePlanningMode) {
      if (Math.abs(MapUtils.degreesDiff(mapView.getRotate(),-val)) > 1) {
        mapView.setRotate(-val);
      }
    }
 else     if (settings.SHOW_VIEW_ANGLE.get()) {
      mapView.refreshMap();
    }
  }
}
