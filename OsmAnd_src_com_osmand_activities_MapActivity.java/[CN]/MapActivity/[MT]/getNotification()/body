{
  Intent notificationIndent=new Intent(this,MapActivity.class);
  notificationIndent.setFlags(Intent.FLAG_ACTIVITY_CLEAR_TOP);
  Notification notification=new Notification(R.drawable.icon,"",System.currentTimeMillis());
  notification.setLatestEventInfo(this,Version.APP_NAME,"Go back to OsmAnd map",PendingIntent.getActivity(this.getBaseContext(),0,notificationIndent,PendingIntent.FLAG_UPDATE_CURRENT));
  return notification;
}
