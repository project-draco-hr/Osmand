{
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    db.execSQL("DELETE FROM " + CATEGORIES_NAME + " WHERE "+ CATEGORIES_FILTER_ID+ " = ?",new Object[]{filter.getFilterId()});
    addFilter(filter,db,true);
    db.execSQL("UPDATE " + FILTER_NAME + " SET "+ FILTER_COL_FILTERBYNAME+ " = ?, "+ FILTER_COL_NAME+ " = ? "+ " WHERE "+ FILTER_COL_ID+ "= ?",new Object[]{filter.getFilterByName(),filter.getName(),filter.getFilterId()});
    return true;
  }
  return false;
}
