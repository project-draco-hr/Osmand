{
  if (currentLocation != null) {
    List<LocationPoint> wpt=route.getWaypointsToAnnounce(currentLocation);
    if (wpt.size() > 0) {
      String s="";
      for (      LocationPoint w : wpt) {
        if (!Algorithms.isEmpty(w.getName())) {
          s=w.getName() + ",";
        }
      }
      if (!Algorithms.isEmpty(s)) {
        voiceRouter.announceWaypoint(s);
      }
    }
  }
}
