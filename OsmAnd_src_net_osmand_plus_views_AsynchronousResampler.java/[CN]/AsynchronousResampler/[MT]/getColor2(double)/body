{
  double a=(1. - percent) * 5.;
  int X=(int)Math.floor(a);
  int Y=(int)(Math.floor(255 * (a - X)));
  int r=0, g=0, b=0;
switch (X) {
case 0:
    r=255;
  g=Y;
b=0;
break;
case 1:
r=255 - Y;
g=255;
b=0;
break;
case 2:
r=0;
g=255;
b=Y;
break;
case 3:
r=0;
g=255 - Y;
b=255;
break;
case 4:
r=Y;
g=0;
b=255;
break;
case 5:
r=255;
g=0;
b=255;
break;
}
return 0xFF000000 + (r << 16) + (g << 8)+ b;
}
