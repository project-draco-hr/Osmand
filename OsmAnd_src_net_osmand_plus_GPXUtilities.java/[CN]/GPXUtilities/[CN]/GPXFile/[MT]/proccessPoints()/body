{
  List<TrkSegment> tpoints=new ArrayList<TrkSegment>();
  for (  Track t : tracks) {
    for (    TrkSegment ts : t.segments) {
      if (ts.points.size() > 0) {
        TrkSegment sgmt=new TrkSegment();
        tpoints.add(sgmt);
        sgmt.points.addAll(ts.points);
        sgmt.setColor(t.getColor(0));
      }
    }
  }
  return tpoints;
}
