{
  this.listSenders=listSenders;
  this.listReactors=listReactors;
  HandlerThread h=new HandlerThread("OSMo Service");
  h.start();
  serviceThread=new Handler(h.getLooper());
  serviceThread.post(new Runnable(){
    @Override public void run(){
      try {
        initConnection();
      }
 catch (      IOException e) {
