{
  int i=first;
  int j=second;
  int l=0;
  int midValI;
  int midValJ;
  Element[] temp=new Element[third - first + 1];
  while ((i < second) && (j <= third)) {
    midValI=getMid(elmts[i],on);
    midValJ=getMid(elmts[j],on);
    if (midValI <= midValJ)     temp[l++]=elmts[i++];
 else     temp[l++]=elmts[j++];
  }
  if (i >= second)   while (j <= third)   temp[l++]=elmts[j++];
 else   while (i < second)   temp[l++]=elmts[i++];
  System.arraycopy(temp,0,elmts,first,temp.length);
}
