{
  lastAskedLocation=loc;
  RouteDataObject r=lastFound;
  if (loc == null || loc.getAccuracy() > 50) {
    return null;
  }
  if (r == null) {
    scheduleRouteSegmentFind(loc);
    return null;
  }
  double d=getOrthogonalDistance(r,loc);
  if (d > 25) {
    scheduleRouteSegmentFind(loc);
  }
  if (d < 70) {
    return r;
  }
  return null;
}
