{
  Place item=adapter.getItem(position);
  QuickAction qa=new QuickAction(view);
  MapActivityActions.createDirectionsActions(qa,new LatLon(item.lat,item.lon),item,getString(R.string.address) + " : " + item.displayName,Math.max(15,settings.getLastKnownMapZoom()),getActivity(),true,null);
  qa.show();
}
