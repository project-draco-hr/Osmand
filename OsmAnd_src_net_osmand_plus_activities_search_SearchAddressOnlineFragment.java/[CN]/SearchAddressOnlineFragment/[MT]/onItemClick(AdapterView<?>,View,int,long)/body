{
  Place item=adapter.getItem(position);
  final PopupMenu optionsMenu=new PopupMenu(getActivity(),view);
  DirectionsDialogs.createDirectionsActionsPopUpMenu(optionsMenu,new LatLon(item.lat,item.lon),item,new PointDescription(PointDescription.POINT_TYPE_ADDRESS,item.displayName),Math.max(15,settings.getLastKnownMapZoom()),getActivity(),true);
  optionsMenu.show();
}
