{
  Map<String,String> indexActivatedFileNames=app.getResourceManager().getIndexFileNames();
  DownloadIndexFragment.listWithAlternatives(dateFormat,app.getAppPath(""),IndexConstants.EXTRA_EXT,indexActivatedFileNames);
  Map<String,String> indexFileNames=app.getResourceManager().getIndexFileNames();
  DownloadIndexFragment.listWithAlternatives(dateFormat,app.getAppPath(""),IndexConstants.EXTRA_EXT,indexFileNames);
  app.getAppCustomization().updatedLoadedFiles(indexFileNames,indexActivatedFileNames);
  DownloadIndexFragment.listWithAlternatives(dateFormat,app.getAppPath(IndexConstants.TILES_INDEX_DIR),IndexConstants.SQLITE_EXT,indexFileNames);
  app.getResourceManager().getBackupIndexes(indexFileNames);
  this.indexFileNames=indexFileNames;
  this.indexActivatedFileNames=indexActivatedFileNames;
}
