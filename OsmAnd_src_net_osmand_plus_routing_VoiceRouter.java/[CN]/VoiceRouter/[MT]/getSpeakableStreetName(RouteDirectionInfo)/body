{
  String res="";
  if (i == null || !router.getSettings().SPEAK_STREET_NAMES.get()) {
    return res;
  }
  if (!Algorithms.isEmpty(i.getRef())) {
    res=i.getRef();
  }
 else   if (!Algorithms.isEmpty(i.getStreetName())) {
    res=i.getStreetName();
  }
  if (res != null) {
    res=res.replace('-',' ');
    res=res.replace(':',' ');
    res=res.replace("?","ss");
    res=res.replace("\u00df","ss");
    res=res.replace("&szlig;","ss");
  }
  return res;
}
