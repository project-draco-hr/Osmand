{
  super.onListItemClick(l,v,position,id);
  Place item=((PlacesAdapter)getListAdapter()).getItem(position);
  QuickAction qa=new QuickAction(v);
  MapActivityActions.createDirectionsActions(qa,new LatLon(item.lat,item.lon),item,getString(R.string.address) + " : " + item.displayName,Math.max(15,settings.getLastKnownMapZoom()),this,true,null);
  qa.show();
}
