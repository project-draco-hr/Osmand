{
  checkFavoritePoints();
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    db.execSQL("DELETE FROM " + FAVOURITE_TABLE_NAME + " WHERE category = ? AND "+ whereNameLatLon(),new Object[]{p.getCategory(),p.getName(),p.getLatitude(),p.getLongitude()});
    FavouritePoint fp=findFavoriteByName(p.getName(),p.getCategory());
    if (fp != null) {
      favoriteGroups.get(p.getCategory()).remove(fp);
      cachedFavoritePoints.remove(fp);
      fp.setStored(false);
    }
    backupSilently();
    return true;
  }
  return false;
}
