{
  checkFavoritePoints();
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    db.execSQL("UPDATE " + FAVOURITE_TABLE_NAME + " SET latitude = ?, longitude = ? WHERE name = ?",new Object[]{lat,lon,p.getName()});
    p.setLatitude(lat);
    p.setLongitude(lon);
    return true;
  }
  return false;
}
