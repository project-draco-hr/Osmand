{
  checkFavoritePoints();
  SQLiteDatabase db=getWritableDatabase();
  if (db != null) {
    db.execSQL("UPDATE " + FAVOURITE_TABLE_NAME + " SET latitude = ?, longitude = ? WHERE "+ whereNameLatLon(),new Object[]{lat,lon,p.getName(),p.getLatitude(),p.getLongitude()});
    p.setLatitude(lat);
    p.setLongitude(lon);
    backupSilently();
    return true;
  }
  return false;
}
