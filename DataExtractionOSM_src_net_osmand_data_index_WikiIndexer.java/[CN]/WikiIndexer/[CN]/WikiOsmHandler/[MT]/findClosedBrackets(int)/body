{
  if (i == -1) {
    return -1;
  }
  int stack=1;
  int h=text.indexOf("{{",i + 2);
  int e=text.indexOf("}}",i + 2);
  while (stack != 0 && e != -1) {
    if (h != -1 && h < e) {
      i=h;
      stack++;
    }
 else {
      i=e;
      stack--;
    }
    if (stack != 0) {
      h=text.indexOf("{{",i + 2);
      e=text.indexOf("}}",i + 2);
    }
  }
  if (stack == 0) {
    return e;
  }
  return -1;
}
