{
  if (preference == avoidRouting || preference == preferRouting) {
    List<RoutingParameter> prms=preference == avoidRouting ? avoidParameters : preferParameters;
    String[] vals=new String[prms.size()];
    OsmandPreference[] bls=new OsmandPreference[prms.size()];
    for (int i=0; i < prms.size(); i++) {
      RoutingParameter p=prms.get(i);
      vals[i]=SettingsBaseActivity.getRoutingStringPropertyName(this,p.getId(),p.getName());
      bls[i]=settings.getCustomRoutingBooleanProperty(p.getId());
    }
    showBooleanSettings(vals,bls,preference.getTitle());
    return true;
  }
 else   if (preference == showAlarms) {
    showBooleanSettings(new String[]{getString(R.string.show_traffic_warnings),getString(R.string.show_cameras),getString(R.string.show_lanes)},new OsmandPreference[]{settings.SHOW_TRAFFIC_WARNINGS,settings.SHOW_CAMERAS,settings.SHOW_LANES},preference.getTitle());
    return true;
  }
 else   if (preference == speakAlarms) {
    showBooleanSettings(new String[]{getString(R.string.speak_street_names),getString(R.string.speak_traffic_warnings),getString(R.string.speak_speed_limit),getString(R.string.speak_cameras),getString(R.string.announce_gpx_waypoints),getString(R.string.speak_favorites),getString(R.string.speak_poi)},new OsmandPreference[]{settings.SPEAK_STREET_NAMES,settings.SPEAK_TRAFFIC_WARNINGS,settings.SPEAK_SPEED_LIMIT,settings.SPEAK_SPEED_CAMERA,settings.ANNOUNCE_WPT,settings.ANNOUNCE_NEARBY_FAVORITES,settings.ANNOUNCE_NEARBY_POI},preference.getTitle());
    return true;
  }
  return false;
}
