{
  SQLiteAPI.SQLiteConnection db=openConnection(true);
  long count=0;
  if (db != null) {
    try {
      SQLiteAPI.SQLiteCursor query=db.rawQuery("SELECT " + HISTORY_COL_COUNT + " FROM "+ HISTORY_TABLE_NAME+ " WHERE "+ HISTORY_COL_NAME+ "='"+ name+ "'",null);
      if (query.moveToFirst()) {
        do {
          count=query.getInt(0);
        }
 while (query.moveToNext());
      }
      query.close();
    }
  finally {
      db.close();
    }
  }
  return count;
}
