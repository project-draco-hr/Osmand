{
  OnContextMenuClick listener=new OnContextMenuClick(){
    @Override public void onContextMenuClick(    int itemId,    int pos,    boolean isChecked,    DialogInterface dialog){
      if (itemId == R.string.layer_hillshade) {
        HILLSHADE.set(!HILLSHADE.get());
        updateLayers(mapView,mapActivity);
      }
    }
  }
;
  adapter.item(R.string.layer_hillshade).selected(HILLSHADE.get() ? 1 : 0).icons(R.drawable.ic_action_hillshade_dark,R.drawable.ic_action_hillshade_light).listen(listener).position(9).reg();
}
