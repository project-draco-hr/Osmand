{
  ItemClickListener listener=new ItemClickListener(){
    @Override public boolean onContextMenuClick(    ArrayAdapter<?> adapter,    int itemId,    int pos,    boolean isChecked){
      if (itemId == R.string.layer_hillshade) {
        HILLSHADE.set(!HILLSHADE.get());
        updateLayers(mapView,mapActivity);
      }
      return true;
    }
  }
;
  adapter.addItem(new ContextMenuItem.ItemBuilder().setTitleId(R.string.layer_hillshade,mapActivity).setSelected(HILLSHADE.get()).setColorIcon(R.drawable.ic_action_hillshade_dark).setListener(listener).setPosition(13).setLayout(R.layout.drawer_list_item).createItem());
}
