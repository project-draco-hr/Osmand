{
  OnContextMenuClick listener=new OnContextMenuClick(){
    @Override public boolean onContextMenuClick(    ArrayAdapter<?> adapter,    int itemId,    int pos,    boolean isChecked){
      if (itemId == R.string.layer_hillshade) {
        HILLSHADE.set(!HILLSHADE.get());
        updateLayers(mapView,mapActivity);
      }
      return true;
    }
  }
;
  adapter.item(R.string.layer_hillshade).selected(HILLSHADE.get() ? 1 : 0).colorIcon(R.drawable.ic_action_hillshade_dark).listen(listener).position(13).layout(R.layout.drawer_list_item).reg();
}
