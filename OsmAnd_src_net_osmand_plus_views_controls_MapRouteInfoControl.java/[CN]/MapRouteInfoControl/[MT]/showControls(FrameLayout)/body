{
  infoButton=addButton(parent,R.string.route_info,R.drawable.map_btn_signpost);
  if (showDialog) {
    showDialog();
    showDialog=false;
  }
  controlVisible=true;
  infoButton.setOnClickListener(new View.OnClickListener(){
    @Override public void onClick(    View v){
      notifyClicked();
      if (dialog != null) {
        hideDialog();
      }
 else {
        showDialog();
      }
    }
  }
);
}
