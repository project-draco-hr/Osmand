{
  final View ll=mapActivity.getLayoutInflater().inflate(R.layout.plan_route_info,null);
  updateInfo(ll);
  dialog=MapRoutePreferencesControl.showDialog(mapControlsLayer,mapActivity,ll,new OnDismissListener(){
