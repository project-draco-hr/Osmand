{
  Animation anim=new TranslateAnimation(TranslateAnimation.RELATIVE_TO_SELF,left ? -1 : 1,TranslateAnimation.RELATIVE_TO_SELF,0,TranslateAnimation.RELATIVE_TO_SELF,0,TranslateAnimation.RELATIVE_TO_SELF,0);
  anim.setDuration(700);
  anim.setInterpolator(new AccelerateInterpolator());
  return anim;
}
