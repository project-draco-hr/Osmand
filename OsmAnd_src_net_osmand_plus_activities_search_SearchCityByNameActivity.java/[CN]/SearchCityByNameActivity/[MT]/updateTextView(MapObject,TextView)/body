{
  LatLon l=obj.getLocation();
  if (getFilter().length() > 2 && locationToSearch != null && l != null) {
    txt.setText(obj.getName(region.useEnglishNames()) + " - " + OsmAndFormatter.getFormattedDistance((int)MapUtils.getDistance(l,locationToSearch),this));
  }
 else {
    txt.setText(obj.getName(region.useEnglishNames()));
  }
}
