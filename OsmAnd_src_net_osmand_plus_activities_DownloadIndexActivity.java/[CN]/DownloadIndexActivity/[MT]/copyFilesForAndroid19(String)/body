{
  MoveFilesToDifferentDirectory task=new MoveFilesToDifferentDirectory(DownloadIndexActivity.this,new File(settings.getExternalStorageDirectory(),IndexConstants.APP_DIR),new File(newLoc,IndexConstants.APP_DIR)){
    protected Boolean doInBackground(    Void[] params){
      Boolean result=super.doInBackground(params);
      if (result) {
        settings.setExternalStorageDirectory(newLoc);
        getMyApplication().getResourceManager().resetStoreDirectory();
        getMyApplication().getResourceManager().reloadIndexes(progress);
      }
      return result;
    }
  }
;
  task.execute();
}
