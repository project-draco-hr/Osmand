{
  super.onDestroy();
  if (isFinishing()) {
    downloadFileHelper.setInterruptDownloading(true);
  }
  if (textWatcher != null) {
    EditText filterText=(EditText)findViewById(R.id.search_box);
    filterText.removeTextChangedListener(textWatcher);
  }
  downloadListIndexThread.setUiActivity(null);
}
