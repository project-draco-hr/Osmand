{
  if (stage == null) {
    selectedStagePref.set(-1);
    saveGPXFolder.set(null);
    selectedStage=null;
  }
 else {
    selectedStagePref.set(stage.getOrder());
    selectedStage=stage;
    File fl=new File(stage.tour.getFolder(),"record" + stage.getOrder());
    fl.mkdirs();
    saveGPXFolder.set(fl.getAbsolutePath());
  }
  loadSelectedStage();
}
