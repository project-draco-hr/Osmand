{
  JPanel panel=new JPanel();
  panel.setLayout(new GridLayout(1,1,5,5));
  panel.setBorder(BorderFactory.createTitledBorder(Messages.getString("OsmExtractionPreferencesDialog.GENERAL")));
  root.add(panel);
  useInternet=new JCheckBox();
  useInternet.setText(Messages.getString("OsmExtractionPreferencesDialog.INTERNET.TO.DOWNLOAD.FILES"));
  useInternet.setSelected(DataExtractionSettings.getSettings().useInternetToLoadImages());
  panel.add(useInternet);
  panel.setMaximumSize(new Dimension(Short.MAX_VALUE,panel.getPreferredSize().height));
}
