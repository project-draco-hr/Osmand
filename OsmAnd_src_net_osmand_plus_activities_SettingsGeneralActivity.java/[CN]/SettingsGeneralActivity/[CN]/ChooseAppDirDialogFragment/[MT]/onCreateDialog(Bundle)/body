{
  Bundle args=getArguments();
  final DashChooseAppDirFragment ssf=new DashChooseAppDirFragment();
  ssf.setArguments(args);
  ssf.onAttach(getActivity());
  AlertDialog dlg=new AlertDialog.Builder(getActivity()).setView(ssf.onCreateView(getActivity().getLayoutInflater(),null,savedInstanceState)).setNegativeButton(R.string.shared_string_cancel,null).setPositiveButton(R.string.shared_string_ok,new OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      android.view.View.OnClickListener cf=ssf.getConfirmListener();
      cf.onClick(null);
    }
  }
).create();
  return dlg;
}
