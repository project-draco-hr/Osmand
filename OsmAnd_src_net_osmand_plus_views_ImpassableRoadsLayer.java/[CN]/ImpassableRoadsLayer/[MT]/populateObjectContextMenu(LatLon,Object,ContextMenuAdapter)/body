{
  if (latLon != null && o == null && (routingHelper.isRoutePlanningMode() || routingHelper.isFollowingMode())) {
    ContextMenuAdapter.OnContextMenuClick listener=new ContextMenuAdapter.OnContextMenuClick(){
      @Override public boolean onContextMenuClick(      ArrayAdapter<?> adapter,      int itemId,      int pos,      boolean isChecked){
        if (itemId == R.string.avoid_road) {
          activity.getMyApplication().getAvoidSpecificRoads().addImpassableRoad(activity,latLon,false);
        }
        activity.refreshMap();
        return true;
      }
    }
;
    adapter.item(R.string.avoid_road).iconColor(R.drawable.ic_action_road_works_dark).listen(listener).reg();
  }
}
