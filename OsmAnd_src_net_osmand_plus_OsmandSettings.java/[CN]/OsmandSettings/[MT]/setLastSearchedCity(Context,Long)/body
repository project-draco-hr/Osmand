{
  SharedPreferences prefs=getPrefs(ctx);
  Editor edit=getWriteableEditor(ctx).putLong(LAST_SEARCHED_CITY,cityId).putString(LAST_SEARCHED_STREET,"").putString(LAST_SEARCHED_BUILDING,"");
  edit.remove(lAST_SEARCHED_POSTCODE);
  if (prefs.contains(LAST_SEARCHED_INTERSECTED_STREET)) {
    edit.putString(LAST_SEARCHED_INTERSECTED_STREET,"");
  }
  return edit.commit();
}
