{
  final Amenity n=getAmenityFromPoint(point);
  if (n != null) {
    Context ctx=view.getContext();
    Builder builder=new AlertDialog.Builder(ctx);
    final EditingPOIActivity edit=new EditingPOIActivity(ctx,view);
    builder.setItems(new String[]{this.view.getResources().getString(R.string.poi_context_menu_modify),this.view.getResources().getString(R.string.poi_context_menu_delete)},new DialogInterface.OnClickListener(){
      @Override public void onClick(      DialogInterface dialog,      int which){
        if (which == 0) {
          edit.showEditDialog(n);
        }
 else {
          edit.showDeleteDialog(n);
        }
      }
    }
);
    builder.show();
    return true;
  }
  return false;
}
