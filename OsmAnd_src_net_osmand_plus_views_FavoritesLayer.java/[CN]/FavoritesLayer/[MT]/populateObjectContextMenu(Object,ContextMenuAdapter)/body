{
  if (o instanceof FavouritePoint) {
    final FavouritePoint a=(FavouritePoint)o;
    OnContextMenuClick listener=new ContextMenuAdapter.OnContextMenuClick(){
      @Override public void onContextMenuClick(      int itemId,      int pos,      boolean isChecked,      DialogInterface dialog){
        if (itemId == R.string.favourites_context_menu_delete) {
          final Resources resources=view.getContext().getResources();
          Builder builder=new AlertDialog.Builder(view.getContext());
          builder.setMessage(resources.getString(R.string.favourites_remove_dialog_msg,a.getName()));
          builder.setNegativeButton(R.string.default_buttons_no,null);
          builder.setPositiveButton(R.string.default_buttons_yes,new DialogInterface.OnClickListener(){
            @Override public void onClick(            DialogInterface dialog,            int which){
              favorites.deleteFavourite(a);
              view.refreshMap();
            }
          }
);
          builder.create().show();
        }
      }
    }
;
    if (a.isRemoveable()) {
      adapter.item(R.string.favourites_context_menu_delete).icons(R.drawable.ic_action_delete_dark,R.drawable.ic_action_delete_light).listen(listener).reg();
    }
  }
}
