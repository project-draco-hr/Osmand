{
  List<Node> polyNodes=polygon.getNodes();
  for (int i=0; i < polyNodes.size() - 1; i++) {
    if (MapAlgorithms.ray_intersect_lon(polyNodes.get(i),polyNodes.get(i + 1),latitude,longitude) != -360d) {
      intersections++;
    }
  }
  if (MapAlgorithms.ray_intersect_lon(polyNodes.get(0),polyNodes.get(polyNodes.size() - 1),latitude,longitude) != -360d) {
    intersections++;
  }
  return intersections;
}
