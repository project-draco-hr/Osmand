{
  stopAnimatingSync();
  targetZoom=0;
  this.notifyListener=true;
  vx=velocityX;
  vy=velocityY;
  dirX=(byte)(endX > startX ? 1 : -1);
  dirY=(byte)(endY > startY ? 1 : -1);
  animateDrag=true;
  ax=vx * a;
  ay=vy * a;
  time=System.currentTimeMillis();
  stopped=false;
  Thread thread=new Thread(this,"Animatable dragging");
  thread.start();
}
