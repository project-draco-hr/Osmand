{
  if (convertView == null) {
    convertView=LayoutInflater.from(parent.getContext()).inflate(R.layout.two_line_with_images_list_item,parent,false);
    DownloadEntryViewHolder viewHolder=new DownloadEntryViewHolder(convertView,deleteDrawable,context,this);
    convertView.setTag(viewHolder);
  }
  DownloadEntryViewHolder viewHolder=(DownloadEntryViewHolder)convertView.getTag();
  int localProgress=itemInProgressPosition == position ? progress : -1;
  viewHolder.bindDownloadEntry(getItem(position),localProgress,isFinished || downloadedItems.contains(position));
  return convertView;
}
