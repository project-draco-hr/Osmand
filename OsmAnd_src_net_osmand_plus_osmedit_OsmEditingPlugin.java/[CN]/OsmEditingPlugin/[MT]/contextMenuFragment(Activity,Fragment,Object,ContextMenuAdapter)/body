{
  if (fragment instanceof AvailableGPXFragment) {
    adapter.addItem(new ContextMenuItem.ItemBuilder().setTitleId(R.string.local_index_mi_upload_gpx,la).setColorIcon(R.drawable.ic_action_export).setListener(new ContextMenuAdapter.ItemClickListener(){
      @Override public boolean onContextMenuClick(      ArrayAdapter<ContextMenuItem> adapter,      int itemId,      int pos,      boolean isChecked){
        sendGPXFiles(la,(AvailableGPXFragment)fragment,(GpxInfo)info);
        return true;
      }
    }
).createItem());
  }
}
