{
  adapter.item(R.string.layer_osm_bugs).selected(settings.SHOW_OSM_BUGS.get() ? 1 : 0).colorIcon(R.drawable.ic_action_bug_dark).listen(new OnContextMenuClick(){
    @Override public boolean onContextMenuClick(    ArrayAdapter<?> adapter,    int itemId,    int pos,    boolean isChecked){
      if (itemId == R.string.layer_osm_bugs) {
        settings.SHOW_OSM_BUGS.set(isChecked);
        updateLayers(mapActivity.getMapView(),mapActivity);
      }
      return true;
    }
  }
).position(16).reg();
}
