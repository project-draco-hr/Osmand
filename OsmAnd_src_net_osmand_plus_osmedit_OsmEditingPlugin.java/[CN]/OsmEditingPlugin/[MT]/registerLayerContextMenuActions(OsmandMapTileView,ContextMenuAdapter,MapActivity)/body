{
  adapter.registerSelectedItem(R.string.layer_osm_bugs,settings.SHOW_OSM_BUGS.get() ? 1 : 0,R.drawable.list_activities_osm_bugs,new OnContextMenuClick(){
    @Override public void onContextMenuClick(    int itemId,    int pos,    boolean isChecked,    DialogInterface dialog){
      if (itemId == R.string.layer_osm_bugs) {
        settings.SHOW_OSM_BUGS.set(isChecked);
      }
    }
  }
,8);
}
