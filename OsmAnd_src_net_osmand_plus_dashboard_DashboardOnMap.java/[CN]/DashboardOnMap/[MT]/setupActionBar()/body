{
  final Toolbar tb=(Toolbar)mapActivity.findViewById(R.id.bottomControls);
  tb.setTitle(null);
  tb.getMenu().clear();
  Menu menu=tb.getMenu();
  createMenuItem(menu,LIST_ID,R.string.drawer,R.drawable.ic_dashboard_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,DIRECTIONS_ID,R.string.get_directions,R.drawable.ic_action_gdirections_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,CONFIGURE_SCREEN_ID,R.string.layer_map_appearance,R.drawable.ic_configure_screen_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,SETTINGS_ID,R.string.settings_activity,R.drawable.ic_action_settings_enabled_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
}
