{
  final Toolbar tb=(Toolbar)ma.findViewById(R.id.bottomControls);
  tb.setTitle(null);
  tb.getMenu().clear();
  Menu menu=tb.getMenu();
  createMenuItem(menu,LIST_ID,R.string.drawer,R.drawable.ic_flat_list_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,WAYPOINTS_ID,R.string.waypoints,R.drawable.ic_action_flage_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,CONFIGURE_SCREEN_ID,R.string.layer_map_appearance,R.drawable.ic_configure_screen_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
  createMenuItem(menu,SETTINGS_ID,R.string.settings_activity,R.drawable.ic_action_settings_enabled_dark,MenuItemCompat.SHOW_AS_ACTION_ALWAYS);
}
