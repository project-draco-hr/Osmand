{
  if (mMenuView == null) {
    mMenuView=(ExpandedMenuView)mInflater.inflate(R.layout.abc_expanded_menu_layout,root,false);
    if (mAdapter == null) {
      mAdapter=new MenuAdapter();
    }
    mMenuView.setAdapter(mAdapter);
    mMenuView.setOnItemClickListener(this);
  }
  return mMenuView;
}
