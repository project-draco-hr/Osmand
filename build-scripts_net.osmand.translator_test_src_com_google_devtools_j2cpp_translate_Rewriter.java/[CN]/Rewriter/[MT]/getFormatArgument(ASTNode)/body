{
  ITypeBinding type=Types.getTypeBinding(node);
  AST ast=node.getAST();
  if (node instanceof CharacterLiteral || type.isEqualTo(ast.resolveWellKnownType("char"))) {
    return "%C";
  }
  if (node instanceof BooleanLiteral || type.isEqualTo(ast.resolveWellKnownType("boolean"))) {
    return "%d";
  }
  if (type.isEqualTo(ast.resolveWellKnownType("byte")) || type.isEqualTo(ast.resolveWellKnownType("int")) || type.isEqualTo(ast.resolveWellKnownType("short"))) {
    return "%d";
  }
  if (type.isEqualTo(ast.resolveWellKnownType("long"))) {
    return "%lld";
  }
  if (type.isEqualTo(ast.resolveWellKnownType("float")) || type.isEqualTo(ast.resolveWellKnownType("double"))) {
    return "%f";
  }
  if (node instanceof NumberLiteral) {
    String token=((NumberLiteral)node).getToken();
    try {
      Integer.parseInt(token);
      return "%d";
    }
 catch (    NumberFormatException e) {
      try {
        Long.parseLong(token);
        return "%lld";
      }
 catch (      NumberFormatException e2) {
        try {
          Double.parseDouble(token);
          return "%f";
        }
 catch (        NumberFormatException e3) {
          throw new AssertionError("unknown number literal format: \"" + token + "\"");
        }
      }
    }
  }
  return "%@";
}
