{
  super.onResume();
  mAdapter.updateViews();
  mTagsChangedListener=new EditPoiFragment.EditPoiData.TagsChangedListener(){
    @Override public void onTagsChanged(){
      mIsUserInput=false;
      mAdapter.updateViews();
      mIsUserInput=true;
    }
  }
;
  getData().addListener(mTagsChangedListener);
}
