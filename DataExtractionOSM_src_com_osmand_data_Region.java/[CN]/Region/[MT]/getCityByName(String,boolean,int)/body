{
  List<City> l=new ArrayList<City>();
  for (  CityType type : CityType.values()) {
    for (    City c : cities.get(type)) {
      if ((exactMatch && c.getName().equalsIgnoreCase(name)) || (!exactMatch && c.getName().toLowerCase().startsWith(name.toLowerCase()))) {
        l.add(c);
        if (l.size() >= number) {
          break;
        }
      }
    }
  }
  return l;
}
