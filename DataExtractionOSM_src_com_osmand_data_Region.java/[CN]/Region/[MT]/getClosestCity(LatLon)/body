{
  City closest=null;
  double relDist=Double.POSITIVE_INFINITY;
  for (  CityType t : CityType.values()) {
    for (    City c : cities.get(t)) {
      double rel=NodeUtil.getDistance(c.getNode(),point) / t.getRadius();
      if (rel < 1) {
        return c;
      }
      if (rel < relDist) {
        closest=c;
        relDist=rel;
      }
    }
  }
  return closest;
}
