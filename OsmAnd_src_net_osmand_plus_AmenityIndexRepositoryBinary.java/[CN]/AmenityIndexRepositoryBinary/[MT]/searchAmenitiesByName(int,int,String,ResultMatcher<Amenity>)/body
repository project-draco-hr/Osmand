{
  long now=System.currentTimeMillis();
  List<Amenity> amenities=Collections.emptyList();
  SearchRequest<Amenity> req=BinaryMapIndexReader.buildSearchPoiRequest(x,y,query,resulMatcher);
  try {
    amenities=index.searchPoiByName(req);
    if (log.isDebugEnabled()) {
      log.debug(String.format("Search for %s done in %s ms found %s.",query,System.currentTimeMillis() - now,amenities.size()));
    }
  }
 catch (  IOException e) {
    log.error("Error searching amenities",e);
  }
  return amenities;
}
