{
  if (isLocation()) {
    if (Algorithms.isEmpty(name)) {
      return getLocationName(ctx,lat,lon,true).replace('\n',' ');
    }
 else {
      return name;
    }
  }
  if (!Algorithms.isEmpty(typeName)) {
    if (Algorithms.isEmpty(name)) {
      return typeName;
    }
 else     if (addTypeName) {
      return typeName.trim() + ": " + name;
    }
  }
  return name;
}
