{
  if (menu.hasHiddenBottomInfo()) {
    ContextMenuAdapter.OnContextMenuClick listener=new ContextMenuAdapter.OnContextMenuClick(){
      @Override public boolean onContextMenuClick(      ArrayAdapter<?> adapter,      int itemId,      int pos,      boolean isChecked){
        if (itemId == R.string.shared_string_show_description) {
          menu.openMenuFullScreen();
        }
        return true;
      }
    }
;
    adapter.item(R.string.shared_string_show_description).colorIcon(R.drawable.ic_action_note_dark).listen(listener).reg();
  }
}
