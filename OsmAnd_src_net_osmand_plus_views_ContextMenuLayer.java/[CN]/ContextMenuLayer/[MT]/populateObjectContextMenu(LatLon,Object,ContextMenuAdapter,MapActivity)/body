{
  if (menu.hasHiddenBottomInfo()) {
    ContextMenuAdapter.ItemClickListener listener=new ContextMenuAdapter.ItemClickListener(){
      @Override public boolean onContextMenuClick(      ArrayAdapter<ContextMenuItem> adapter,      int itemId,      int pos,      boolean isChecked){
        if (itemId == R.string.shared_string_show_description) {
          menu.openMenuFullScreen();
        }
        return true;
      }
    }
;
    adapter.addItem(new ContextMenuItem.ItemBuilder().setTitleId(R.string.shared_string_show_description,activity).setColorIcon(R.drawable.ic_action_note_dark).setListener(listener).createItem());
  }
}
