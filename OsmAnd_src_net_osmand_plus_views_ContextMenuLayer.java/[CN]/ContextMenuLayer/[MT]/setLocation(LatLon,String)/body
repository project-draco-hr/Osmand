{
  latLon=loc;
  if (latLon != null) {
    if (description == null || description.length() == 0) {
      description=MessageFormat.format(view.getContext().getString(R.string.point_on_map),latLon.getLatitude(),latLon.getLongitude());
    }
    textView.setText(description);
  }
 else {
    textView.setText("");
  }
  textView.layout(0,0,textSize,(int)((textView.getPaint().getTextSize() + 4) * textView.getLineCount()));
}
