{
  latLon=loc;
  if (latLon != null) {
    if (description == null) {
      description=PointDescription.LOCATION_POINT.getFullPlainName(activity,loc.getLatitude(),loc.getLongitude());
    }
    textView.setText(Html.fromHtml(description.replace("\n","<br/>")));
  }
 else {
    textView.setText("");
  }
  layoutText();
}
