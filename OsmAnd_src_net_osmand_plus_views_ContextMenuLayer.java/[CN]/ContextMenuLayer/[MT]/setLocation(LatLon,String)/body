{
  latLon=loc;
  if (latLon != null) {
    if (description == null) {
      description=new PointDescription(loc.getLatitude(),loc.getLongitude()).getFullPlainName(activity);
    }
    textView.setText(Html.fromHtml(description.replace("\n","<br/>")));
  }
 else {
    textView.setText("");
  }
  layoutText();
}
