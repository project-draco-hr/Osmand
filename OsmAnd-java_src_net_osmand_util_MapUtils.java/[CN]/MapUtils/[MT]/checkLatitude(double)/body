{
  if (latitude > -80 && latitude <= 80) {
    return latitude;
  }
  while (latitude < -90 || latitude > 90) {
    if (latitude < 0) {
      latitude+=180;
    }
 else {
      latitude-=180;
    }
  }
  if (latitude < -85.0511) {
    return -85.0511;
  }
 else   if (latitude > 85.0511) {
    return 85.0511;
  }
  return latitude;
}
