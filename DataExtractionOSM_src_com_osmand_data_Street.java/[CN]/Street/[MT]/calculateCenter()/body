{
  if (wayNodes.size() == 1) {
    center=wayNodes.get(0);
    return;
  }
  LatLon c=MapUtils.getWeightCenterForNodes(wayNodes);
  double dist=Double.POSITIVE_INFINITY;
  for (  Node n : wayNodes) {
    if (n != null) {
      double nd=MapUtils.getDistance(n,c);
      if (nd < dist) {
        center=n;
        dist=nd;
      }
    }
  }
}
