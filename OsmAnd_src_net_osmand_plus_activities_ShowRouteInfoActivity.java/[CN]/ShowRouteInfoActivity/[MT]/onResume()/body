{
  super.onResume();
  int dist=helper.getLeftDistance();
  int hours=helper.getLeftTime() / (60 * 60);
  int minutes=(helper.getLeftTime() / 60) % 60;
  header.setText(MessageFormat.format(getString(R.string.route_general_information),OsmAndFormatter.getFormattedDistance(dist,this),hours,minutes));
  float f=Math.min(dm.widthPixels / (dm.density * 160),dm.heightPixels / (dm.density * 160));
  if (f >= 3) {
    header.setTextSize(dm.scaledDensity * 23);
  }
  setListAdapter(new RouteInfoAdapter(((OsmandApplication)getApplication()).getRoutingHelper().getRouteDirections()));
}
