{
  if (position < 1) {
    return;
  }
  RouteDirectionInfo item=((RouteInfoAdapter)getListAdapter()).getItem(position - 2);
  Location loc=helper.getLocationFromRouteDirection(item);
  if (loc != null) {
    OsmandSettings settings=((OsmandApplication)getApplication()).getSettings();
    settings.setMapLocationToShow(loc.getLatitude(),loc.getLongitude(),Math.max(13,settings.getLastKnownMapZoom()),null,item.getDescriptionRoute() + " " + getTimeDescription(item),null);
    MapActivity.launchMapActivityMoveToTop(this);
  }
}
