{
  if (position < 1) {
    return;
  }
  RouteDirectionInfo item=((RouteInfoAdapter)getListAdapter()).getItem(position - 1);
  Location loc=helper.getLocationFromRouteDirection(item);
  if (loc != null) {
    MapRouteInfoControl.directionInfo=position - 1;
    OsmandSettings settings=((OsmandApplication)getApplication()).getSettings();
    settings.setMapLocationToShow(loc.getLatitude(),loc.getLongitude(),Math.max(13,settings.getLastKnownMapZoom()),null,item.getDescriptionRoutePart() + " " + getTimeDescription(item),null);
    MapActivity.launchMapActivityMoveToTop(this);
  }
}
