{
  new AsyncTask<Void,Void,List<SearchItem>>(){
    @Override protected List<SearchItem> doInBackground(    Void... params){
      return doSearch();
    }
    @Override protected void onPostExecute(    List<SearchItem> searchItems){
      onSearchRequestPostExecute(searchItems);
      if (onFinished != null) {
        onFinished.run();
      }
      if (searchCallback != null && !cancelled) {
        searchCallback.onSearchFinished(searchItems);
      }
    }
  }
.execute();
}
