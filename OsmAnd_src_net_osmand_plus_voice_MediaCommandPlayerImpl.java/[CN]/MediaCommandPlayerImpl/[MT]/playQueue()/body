{
  if (mediaPlayer == null) {
    mediaPlayer=new MediaPlayer();
  }
  performDelays();
  File file=getNextFileToPlay();
  if (file != null) {
    playFile(file);
  }
 else {
    if (mediaPlayer != null) {
      mediaPlayer.release();
      mediaPlayer=null;
      if (mAudioFocusHelper != null)       mAudioFocusHelper.abandonFocus();
    }
  }
}
