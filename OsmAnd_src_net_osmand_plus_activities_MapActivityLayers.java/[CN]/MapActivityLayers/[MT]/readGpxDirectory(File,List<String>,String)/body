{
  if (dir != null && dir.canRead()) {
    File[] files=dir.listFiles();
    if (files != null) {
      for (      File f : files) {
        if (f.getName().endsWith(".gpx")) {
          list.add(parent + f.getName());
        }
 else         if (f.isDirectory()) {
          readGpxDirectory(f,list,parent + f.getName() + "/");
        }
      }
    }
  }
}
