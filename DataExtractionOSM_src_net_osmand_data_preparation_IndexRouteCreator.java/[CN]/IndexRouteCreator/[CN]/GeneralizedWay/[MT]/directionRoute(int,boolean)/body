{
  float dist=5;
  int x=this.px.get(startPoint);
  int y=this.py.get(startPoint);
  int nx=startPoint;
  int px=x;
  int py=y;
  double total=0;
  do {
    if (plus) {
      nx++;
      if (nx >= size()) {
        break;
      }
    }
 else {
      nx--;
      if (nx < 0) {
        break;
      }
    }
    px=this.px.get(nx);
    py=this.py.get(nx);
    total+=Math.abs(px - x) * 0.011d + Math.abs(py - y) * 0.01863d;
  }
 while (total < dist);
  return -Math.atan2(x - px,y - py);
}
