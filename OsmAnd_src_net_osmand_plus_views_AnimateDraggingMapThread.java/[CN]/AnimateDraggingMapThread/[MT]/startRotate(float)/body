{
  if (!isAnimating()) {
    clearTargetValues();
    startThreadAnimating(new Runnable(){
      @Override public void run(){
        targetRotate=rotate;
        try {
          pendingRotateAnimation();
        }
 catch (        InterruptedException e) {
        }
      }
    }
);
  }
 else {
    this.targetRotate=rotate;
  }
}
