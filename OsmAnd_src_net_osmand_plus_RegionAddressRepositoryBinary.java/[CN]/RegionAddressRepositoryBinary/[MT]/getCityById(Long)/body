{
  if (id == -1) {
    return null;
  }
  preloadCities(null);
  if (!cities.containsKey(id)) {
    try {
      file.getVillages(region,new ResultMatcher<MapObject>(){
        boolean canceled=false;
        @Override public boolean isCancelled(){
          return canceled;
        }
        @Override public boolean publish(        MapObject object){
          if (object.getId().longValue() == id.longValue()) {
            addCityToPreloadedList((City)object);
            canceled=true;
          }
          return false;
        }
      }
,null,useEnglishNames);
    }
 catch (    IOException e) {
      log.error("Disk operation failed",e);
    }
  }
  return cities.get(id);
}
