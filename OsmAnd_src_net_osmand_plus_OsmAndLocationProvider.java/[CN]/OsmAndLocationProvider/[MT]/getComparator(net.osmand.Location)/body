{
  return new Comparator<Object>(){
    @Override public int compare(    Object locationPoint,    Object locationPoint2){
      double d1=MapUtils.getDistance(lastLocation.getLatitude(),lastLocation.getLongitude(),((LocationPoint)locationPoint).getLatitude(),((LocationPoint)locationPoint).getLongitude());
      double d2=MapUtils.getDistance(lastLocation.getLatitude(),lastLocation.getLongitude(),((LocationPoint)locationPoint2).getLatitude(),((LocationPoint)locationPoint2).getLongitude());
      return Double.compare(d1,d2);
    }
  }
;
}
