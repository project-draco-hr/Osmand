{
  double dz=(Math.log(relativeToStart) / Math.log(2)) * 1.5;
  if (Math.abs(dz) <= (startRotating ? 0.05 : 0.05)) {
    dz=0;
  }
  if (Math.abs(relAngle) < 17 && !startRotating) {
    relAngle=0;
  }
 else {
    startRotating=true;
  }
  if (dz != 0 || relAngle != 0) {
    changeZoomPosition((float)dz,relAngle);
  }
}
