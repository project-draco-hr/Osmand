{
  this.mainLayer=mainLayer;
  int zoom=currentViewport.getZoom();
  maxZoom=BaseMapLayer.DEFAULT_MAX_ZOOM;
  minZoom=mainLayer.getMinimumShownMapZoom() + 1;
  if (maxZoom < zoom) {
    zoom=maxZoom;
  }
  if (minZoom > zoom) {
    zoom=minZoom;
  }
  currentViewport.setZoomAndAnimation(zoom,0,0);
  refreshMap();
}
