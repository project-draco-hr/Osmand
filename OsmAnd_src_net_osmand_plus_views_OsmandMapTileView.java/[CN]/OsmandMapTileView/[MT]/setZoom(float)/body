{
  if (mainLayer != null && zoom <= mainLayer.getMaximumShownMapZoom() + 0.01 && zoom >= mainLayer.getMinimumShownMapZoom() - 0.01) {
    animatedDraggingThread.stopAnimating();
    if (zoom < Math.round(zoom)) {
      this.zoom=zoom + 0.001f;
    }
 else {
      this.zoom=zoom;
    }
    refreshMap();
  }
}
