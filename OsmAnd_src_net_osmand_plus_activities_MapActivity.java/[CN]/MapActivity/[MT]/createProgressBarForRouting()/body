{
  FrameLayout parent=(FrameLayout)mapView.getParent();
  FrameLayout.LayoutParams params=new FrameLayout.LayoutParams(LayoutParams.WRAP_CONTENT,LayoutParams.WRAP_CONTENT,Gravity.CENTER_HORIZONTAL | Gravity.TOP);
  DisplayMetrics dm=getResources().getDisplayMetrics();
  params.topMargin=(int)(100 * dm.density);
  ProgressBar pb=new ProgressBar(this,null,android.R.attr.progressBarStyleHorizontal);
  pb.setIndeterminate(false);
  pb.setMax(100);
  pb.setLayoutParams(params);
  pb.setVisibility(View.GONE);
  parent.addView(pb);
  routingHelper.setProgressBar(pb,new Handler());
}
