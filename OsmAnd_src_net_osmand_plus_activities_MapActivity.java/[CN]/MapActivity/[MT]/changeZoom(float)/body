{
  boolean changeLocation=settings.AUTO_ZOOM_MAP.get();
  mapView.getAnimatedDraggingThread().startZooming(newZoom,changeLocation);
  if (getMyApplication().accessibilityEnabled())   AccessibleToast.makeText(this,getString(R.string.zoomIs) + " " + String.valueOf(newZoom),Toast.LENGTH_SHORT).show();
  showAndHideMapPosition();
}
