{
  String query=null;
  if (uri.isOpaque()) {
    String schemeSpecificPart=uri.getSchemeSpecificPart();
    int pos=schemeSpecificPart.indexOf("?");
    if (pos == schemeSpecificPart.length()) {
      query="";
    }
 else     if (pos > -1) {
      query=schemeSpecificPart.substring(pos + 1);
    }
  }
 else {
    query=uri.getQuery();
  }
  return getQueryParameters(query);
}
